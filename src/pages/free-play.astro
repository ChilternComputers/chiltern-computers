<style>
  /* Construction-specific animations */
  @keyframes construction-bounce {
    0%, 100% { transform: translateY(0) rotate(0deg); }
    25% { transform: translateY(-10px) rotate(-5deg); }
    75% { transform: translateY(-5px) rotate(5deg); }
  }
  
  @keyframes construction-pulse {
    0%, 100% { 
      width: 8px; 
      height: 8px; 
      opacity: 1; 
    }
    50% { 
      width: 12px; 
      height: 12px; 
      opacity: 0.7; 
    }
  }
  
  @keyframes progress-fill {
    0% { width: 0%; }
    100% { width: 65%; }
  }
  
  @keyframes float-tool {
    0%, 100% { transform: translateY(0px) rotate(0deg); }
    33% { transform: translateY(-20px) rotate(5deg); }
    66% { transform: translateY(-10px) rotate(-3deg); }
  }
  
  /* Construction planet animation */
  .construction-planet {
    animation: construction-bounce 3s ease-in-out infinite;
  }
  
  .construction-planet:hover {
    animation: construction-bounce 1s ease-in-out infinite;
  }
  
  /* Pulsing indicator */
  .construction-pulse {
    width: 8px;
    height: 8px;
    background: var(--solar-orange);
    border-radius: 50%;
    animation: construction-pulse 2s ease-in-out infinite;
  }
  
  /* Construction cards with delay animations */
  .construction-card {
    padding: 24px;
    text-align: center;
    animation: float-cosmic 6s ease-in-out infinite;
  }
  
  .construction-card:nth-child(1) { animation-delay: 0s; }
  .construction-card:nth-child(2) { animation-delay: 2s; }
  .construction-card:nth-child(3) { animation-delay: 4s; }
  
  /* Progress bar */
  .progress-container {
    max-width: 300px;
    margin: 0 auto;
  }
  
  .progress-bar {
    width: 100%;
    height: 8px;
    background: rgba(55, 65, 81, 0.5);
    border-radius: 4px;
    overflow: hidden;
    border: 1px solid var(--plasma-cyan);
  }
  
  .progress-fill {
    height: 100%;
    background: linear-gradient(90deg, var(--aurora-green), var(--plasma-cyan));
    border-radius: 4px;
    animation: progress-fill 3s ease-out;
    box-shadow: 0 0 10px rgba(6, 182, 212, 0.5);
  }
  
  /* Floating construction tools */
  .floating-elements {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    z-index: 1;
  }
  
  .floating-tool {
    position: absolute;
    font-size: 24px;
    opacity: 0.3;
    animation: float-tool 8s ease-in-out infinite;
  }
  
  .tool-1 {
    top: 20%;
    left: 10%;
    animation-delay: 0s;
  }
  
  .tool-2 {
    top: 30%;
    right: 15%;
    animation-delay: 1s;
  }
  
  .tool-3 {
    bottom: 30%;
    left: 20%;
    animation-delay: 2s;
  }
  
  .tool-4 {
    top: 60%;
    right: 10%;
    animation-delay: 3s;
  }
  
  .tool-5 {
    bottom: 20%;
    right: 25%;
    animation-delay: 4s;
  }
  
  /* Mobile optimizations */
  @media (max-width: 768px) {
    .construction-planet {
      width: 80px !important;
      height: 80px !important;
      font-size: 40px !important;
    }
    
    .floating-tool {
      font-size: 18px;
    }
    
    .features-grid {
      grid-template-columns: 1fr !important;
      gap: 16px !important;
    }
  }
  
  @media (max-width: 480px) {
    .construction-planet {
      width: 60px !important;
      height: 60px !important;
      font-size: 30px !important;
    }
    
    .floating-elements {
      display: none; /* Hide floating elements on very small screens */
    }
  }
</style>