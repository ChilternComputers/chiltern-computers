---
import Layout from '../../layouts/Layout.astro';

const area = {
  name: "Harold Hill",
  region: "Romford, Essex",
  postcode: "RM3",
  distance: "0 miles",
  landmarks: ["Harold Hill Library", "Hilldene Shopping Centre", "Dagnam Park"],
  nearby: ["Harold Wood", "Collier Row", "Romford", "Noak Hill"]
};
---

<Layout
  title={`PC Repair ${area.name} - Same Day Service`}
  description={`PC repair in ${area.name}, ${area.region}. Same day laptop repairs, virus removal & data recovery. Call 07971 331814.`}
  keywords={`computer repair ${area.name.toLowerCase()}, pc repair ${area.name.toLowerCase()}, laptop repair ${area.postcode.toLowerCase()}, computer repair ${area.region.toLowerCase()}, virus removal ${area.name.toLowerCase()}, data recovery ${area.name.toLowerCase()}, IT support ${area.name.toLowerCase()}`}
  breadcrumbs={[
    { name: "Home", url: "/" },
    { name: "Areas", url: "/areas/" },
    { name: area.name, url: `/areas/harold-hill/` }
