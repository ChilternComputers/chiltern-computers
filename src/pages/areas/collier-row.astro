---
import Layout from '../../layouts/Layout.astro';
import AreaPage from '../../components/AreaPage.astro';
import { getAreaBySlug } from '../../data/areas';

const area = getAreaBySlug('collier-row')!;
---

<Layout
  title={`PC Repair ${area.name} - Same Day Service`}
  description={`PC repair in ${area.name}, ${area.region}. Same day laptop repairs, virus removal & data recovery. Call 07971 331814.`}
  keywords={`computer repair collier-row, pc repair collier-row, laptop repair ${area.postcode.toLowerCase()}, virus removal collier-row`}
  breadcrumbs={[
    { name: 'Home', url: '/' },
    { name: 'Areas', url: '/areas/' },
    { name: area.name, url: `/areas/collier-row/` },
  ]}
>
  <AreaPage area={area} />
</Layout>
