---
import Layout from '../../layouts/Layout.astro';
import AreaPage from '../../components/AreaPage.astro';
import { getAreaBySlug } from '../../data/areas';

const area = getAreaBySlug('gidea-park')!;
---

<Layout
  title={`PC Repair ${area.name} - Same Day Service`}
  description={`PC repair in ${area.name}, ${area.region}. Same day laptop repairs, virus removal & data recovery. Call 07971 331814.`}
  keywords={`computer repair gidea-park, pc repair gidea-park, laptop repair ${area.postcode.toLowerCase()}, virus removal gidea-park`}
  breadcrumbs={[{ name: "Home", url: "/" }, { name: "Areas", url: "/areas/" }, { name: area.name, url: `/areas/gidea-park/` }]}
>
  <AreaPage area={area} />
</Layout>
