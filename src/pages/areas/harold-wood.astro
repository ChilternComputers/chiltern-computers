---
import Layout from '../../layouts/Layout.astro';
const area = { name: "Harold Wood", region: "Romford", postcode: "RM3", distance: "1.5 miles", landmarks: ["Harold Wood Station", "Harold Wood Park", "Gubbins Lane"], nearby: ["Harold Hill", "Romford", "Gidea Park", "Brentwood"] };
---

<Layout
  title={`PC Repair ${area.name} - Same Day Service`}
  description={`PC repair in ${area.name}, ${area.region}. Same day laptop repairs, virus removal & data recovery. Call 07971 331814.`}
  keywords={`computer repair ${area.name.toLowerCase().replace(' ', '-')}, pc repair ${area.name.toLowerCase().replace(' ', '-')}, laptop repair ${area.postcode.toLowerCase()}, computer shop ${area.region.toLowerCase()}, virus removal ${area.name.toLowerCase().replace(' ', '-')}`}
  breadcrumbs={[{ name: "Home", url: "/" }, { name: "Areas", url: "/areas/" }, { name: area.name, url: `/areas/harold-wood/` }]}
>
  <style>
    * { box-sizing: border-box; } html, body { overflow-x: hidden; width: 100%; }
    :root { --cosmic-blue: #1e3a8a; --nebula-purple: #7c3aed; --starlight-white: #f8fafc; --plasma-cyan: #06b6d4; --aurora-green: #10b981; --solar-orange: #f59e0b; --deep-space: #0f172a; --comet-silver: #e5e7eb; }
    .space-font { font-family: 'Orbitron', sans-serif; font-weight: 600; } .alien-font { font-family: 'Exo 2', sans-serif; } .tech-font { font-family: 'Space Mono', monospace; }
    @keyframes cosmic-pulse { 0%, 100% { text-shadow: 0 0 5px currentColor; } 50% { text-shadow: 0 0 15px currentColor; } }
    @keyframes galaxy-flow { 0% { background-position: 0% 0%; } 50% { background-position: 100% 100%; } 100% { background-position: 0% 0%; } }
    .cosmic-glow { animation: cosmic-pulse 3s ease-in-out infinite alternate; } .galaxy-text { background: linear-gradient(135deg, var(--plasma-cyan), var(--aurora-green), var(--nebula-purple)); background-size: 200% 200%; animation: galaxy-flow 4s ease-in-out infinite; -webkit-background-clip: text; background-clip: text; -webkit-text-fill-color: transparent; }
    .section-bg { background: linear-gradient(135deg, rgba(2, 6, 23, 0.95), rgba(15, 23, 42, 0.9)); }
    .cosmic-card { background: linear-gradient(145deg, rgba(15, 23, 42, 0.9), rgba(30, 58, 138, 0.1)); border: 1px solid var(--plasma-cyan); border-radius: 20px; backdrop-filter: blur(15px); box-shadow: 0 8px 32px rgba(6, 182, 212, 0.2); transition: all 0.3s ease; }
    .cosmic-card:hover { transform: translateY(-5px); border-color: var(--aurora-green); }
    .space-button { background: linear-gradient(135deg, var(--cosmic-blue), var(--nebula-purple)); border: 1px solid var(--aurora-green); color: var(--starlight-white); padding: 14px 28px; border-radius: 25px; font-weight: 600; text-decoration: none; display: inline-flex; align-items: center; gap: 10px; transition: all 0.3s ease; }
    .space-button:hover { transform: translateY(-3px); box-shadow: 0 8px 25px rgba(30, 58, 138, 0.4); }
    .services-grid { display: grid; grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); gap: 20px; }
    .container { width: 100%; max-width: 1200px; margin: 0 auto; padding: 0 20px; }
    @media (max-width: 768px) { .services-grid { grid-template-columns: 1fr; } .container { padding: 0 16px; } }
  </style>

  <main>
    <section class="section-bg" style="padding: 100px 0 60px;">
      <div class="container">
        <div style="text-align: center; margin-bottom: 50px;">
          <div style="display: inline-flex; align-items: center; gap: 8px; background: rgba(16, 185, 129, 0.15); padding: 8px 20px; border-radius: 25px; border: 1px solid var(--aurora-green); margin-bottom: 24px;"><span class="tech-font" style="color: var(--aurora-green); font-size: 13px;">‚ö° JUST {area.distance} AWAY - {area.postcode}</span></div>
          <h1 class="space-font galaxy-text cosmic-glow" style="font-size: clamp(28px, 5vw, 48px); margin-bottom: 20px; line-height: 1.1;">COMPUTER REPAIR {area.name.toUpperCase()}</h1>
          <p class="alien-font" style="font-size: clamp(16px, 3vw, 20px); color: var(--comet-silver); max-width: 700px; margin: 0 auto 30px; line-height: 1.6;">Your neighbourhood computer repair specialists. Just {area.distance} from our Harold Hill base, we offer lightning-fast service for {area.name} residents.</p>
          <div style="display: flex; gap: 16px; justify-content: center; flex-wrap: wrap;"><a href="/contact/" class="space-button space-font"><span>üõ†Ô∏è</span> Book Repair</a><a href="tel:+447971331814" class="space-button space-font" style="background: rgba(16, 185, 129, 0.2);"><span>üì±</span> 07971 331814</a></div>
        </div>
      </div>
    </section>
    <section class="section-bg" style="padding: 60px 0;">
      <div class="container">
        <h2 class="space-font galaxy-text cosmic-glow" style="font-size: clamp(24px, 4vw, 36px); margin-bottom: 40px; text-align: center;">SERVICES IN {area.name.toUpperCase()}</h2>
        <div class="services-grid">
          <div class="cosmic-card" style="padding: 24px; text-align: center;"><span style="font-size: 36px; display: block; margin-bottom: 12px;">üíª</span><h3 class="space-font" style="color: var(--plasma-cyan); font-size: 16px; margin-bottom: 8px;">LAPTOP REPAIRS</h3><p class="alien-font" style="color: var(--comet-silver); font-size: 13px;">Screen, keyboard, battery and charging repairs for all brands.</p></div>
          <div class="cosmic-card" style="padding: 24px; text-align: center;"><span style="font-size: 36px; display: block; margin-bottom: 12px;">üñ•Ô∏è</span><h3 class="space-font" style="color: var(--aurora-green); font-size: 16px; margin-bottom: 8px;">PC REPAIRS</h3><p class="alien-font" style="color: var(--comet-silver); font-size: 13px;">Desktop troubleshooting, hardware upgrades, performance fixes.</p></div>
          <div class="cosmic-card" style="padding: 24px; text-align: center;"><span style="font-size: 36px; display: block; margin-bottom: 12px;">ü¶†</span><h3 class="space-font" style="color: var(--solar-orange); font-size: 16px; margin-bottom: 8px;">VIRUS REMOVAL</h3><p class="alien-font" style="color: var(--comet-silver); font-size: 13px;">Complete malware removal and security restoration.</p></div>
          <div class="cosmic-card" style="padding: 24px; text-align: center;"><span style="font-size: 36px; display: block; margin-bottom: 12px;">üíæ</span><h3 class="space-font" style="color: var(--nebula-purple); font-size: 16px; margin-bottom: 8px;">DATA RECOVERY</h3><p class="alien-font" style="color: var(--comet-silver); font-size: 13px;">Recover your precious files from failed storage devices.</p></div>
        </div>
      </div>
    </section>
    <section class="section-bg" style="padding: 60px 0;">
      <div class="container">
        <div class="cosmic-card" style="padding: 40px;">
          <h2 class="space-font" style="color: var(--plasma-cyan); font-size: clamp(20px, 4vw, 28px); margin-bottom: 24px;">YOUR NEAREST COMPUTER REPAIR SHOP</h2>
          <p class="alien-font" style="color: var(--starlight-white); font-size: 16px; line-height: 1.8; margin-bottom: 20px;">{area.name} residents benefit from our close proximity - just {area.distance} away! Whether you're near {area.landmarks.join(", ")}, we can have your computer fixed quickly.</p>
          <p class="alien-font" style="color: var(--comet-silver); font-size: 15px; line-height: 1.7; margin-bottom: 24px;">We also cover {area.nearby.join(", ")} and the wider {area.region} area. Drop off on your commute or we can collect from you.</p>
          <div style="display: flex; gap: 16px; flex-wrap: wrap;"><a href="/areas/" class="space-button space-font" style="background: rgba(6, 182, 212, 0.2);"><span>üìç</span> All Areas</a><a href="/contact/" class="space-button space-font"><span>üìû</span> Contact Us</a></div>
        </div>
      </div>
    </section>
    <section class="section-bg" style="padding: 60px 0;">
      <div class="container">
        <h2 class="space-font" style="color: var(--aurora-green); font-size: clamp(20px, 4vw, 28px); margin-bottom: 30px; text-align: center;">EXPLORE OUR SERVICES</h2>
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); gap: 20px;">
          <a href="/services/repairs/" class="cosmic-card" style="padding: 24px; text-decoration: none; display: block;">
            <h3 class="space-font" style="color: var(--plasma-cyan); font-size: 16px; margin-bottom: 8px;">üõ†Ô∏è PC & Laptop Repairs</h3>
            <p class="alien-font" style="color: var(--comet-silver); font-size: 14px; margin: 0;">Full repair services for {area.name} customers. Hardware fixes, software issues, and more.</p>
          </a>
          <a href="/services/custom-pcs/" class="cosmic-card" style="padding: 24px; text-decoration: none; display: block;">
            <h3 class="space-font" style="color: var(--nebula-purple); font-size: 16px; margin-bottom: 8px;">üéÆ Custom Gaming PCs</h3>
            <p class="alien-font" style="color: var(--comet-silver); font-size: 14px; margin: 0;">High-performance gaming builds delivered to {area.name}. Built to your specs.</p>
          </a>
          <a href="/services/new-used/" class="cosmic-card" style="padding: 24px; text-decoration: none; display: block;">
            <h3 class="space-font" style="color: var(--solar-orange); font-size: 16px; margin-bottom: 8px;">üíª New & Refurbished PCs</h3>
            <p class="alien-font" style="color: var(--comet-silver); font-size: 14px; margin: 0;">Quality computers at great prices for {area.name} homes and businesses.</p>
          </a>
        </div>
      </div>
    </section>
    <section class="section-bg" style="padding: 60px 0 80px;">
      <div class="container">
        <div class="cosmic-card" style="padding: 50px 40px; text-align: center; border: 2px solid var(--aurora-green);">
          <h2 class="space-font galaxy-text cosmic-glow" style="font-size: clamp(22px, 4vw, 32px); margin-bottom: 16px;">COMPUTER TROUBLE IN {area.name.toUpperCase()}?</h2>
          <p class="alien-font" style="color: var(--comet-silver); margin-bottom: 28px; font-size: 16px;">Open 7 days, 9AM-9PM. Same day service available.</p>
          <a href="tel:+447971331814" class="space-button space-font" style="font-size: 16px; padding: 16px 32px;"><span>üì±</span> 07971 331814</a>
        </div>
      </div>
    </section>
  </main>
</Layout>
