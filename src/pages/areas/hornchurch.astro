---
import Layout from '../../layouts/Layout.astro';
const area = { name: "Hornchurch", region: "Havering", postcode: "RM11/RM12", distance: "3 miles", landmarks: ["Hornchurch Country Park", "Queens Theatre", "High Street"], nearby: ["Upminster", "Emerson Park", "Elm Park", "Romford"] };
---

<Layout
  title={`Computer Repair ${area.name} - PC & Laptop Repairs Havering`}
  description={`Expert computer repair in ${area.name}, ${area.region}. Fast PC repairs, laptop screen replacement, virus removal, data recovery. Serving ${area.postcode} areas. Call 07971 331814.`}
  keywords={`computer repair ${area.name.toLowerCase()}, pc repair ${area.name.toLowerCase()}, laptop repair havering, computer shop ${area.name.toLowerCase()}, virus removal ${area.name.toLowerCase()}, IT support ${area.name.toLowerCase()}`}
