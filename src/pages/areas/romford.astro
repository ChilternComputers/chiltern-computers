---
import Layout from '../../layouts/Layout.astro';
import AreaPage from '../../components/AreaPage.astro';
import { getAreaBySlug } from '../../data/areas';

const area = getAreaBySlug('romford')!;
---

<Layout
  title={`PC Repair ${area.name} - Same Day Service`}
  description={`PC repair in ${area.name} town centre. Same day laptop repairs, screen replacement, virus removal. Call 07971 331814.`}
  keywords={`computer repair ${area.name.toLowerCase()}, pc repair ${area.name.toLowerCase()}, laptop repair ${area.postcode.toLowerCase()}, computer shop ${area.name.toLowerCase()}, virus removal ${area.name.toLowerCase()}, data recovery ${area.name.toLowerCase()}`}
  breadcrumbs={[{ name: "Home", url: "/" }, { name: "Areas", url: "/areas/" }, { name: area.name, url: `/areas/romford/` }]}
>
  <AreaPage area={area} />
</Layout>
