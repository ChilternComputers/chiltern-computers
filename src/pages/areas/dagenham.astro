---
import Layout from '../../layouts/Layout.astro';
const area = { name: "Dagenham", region: "East London", postcode: "RM8/RM9/RM10", distance: "5 miles", landmarks: ["Dagenham Heathway", "Eastbrookend Country Park", "Dagenham Dock"], nearby: ["Barking", "Chadwell Heath", "Rainham", "Romford"] };
---

<Layout
  title={`PC Repair ${area.name} - Same Day Service`}
  description={`PC repair in ${area.name}, ${area.region}. Same day laptop repairs, virus removal & data recovery. Call 07971 331814.`}
  keywords={`computer repair ${area.name.toLowerCase()}, pc repair ${area.name.toLowerCase()}, laptop repair ${area.region.toLowerCase().replace(' ', '-')}, computer shop ${area.name.toLowerCase()}, virus removal ${area.name.toLowerCase()}`}
  breadcrumbs={[{ name: "Home", url: "/" }, { name: "Areas", url: "/areas/" }, { name: area.name, url: `/areas/dagenham/` }]}
>
  <style>
    * { box-sizing: border-box; } html, body { overflow-x: hidden; width: 100%; }
    :root { --cosmic-blue: #1e3a8a; --nebula-purple: #7c3aed; --starlight-white: #f8fafc; --plasma-cyan: #06b6d4; --aurora-green: #10b981; --solar-orange: #f59e0b; --deep-space: #0f172a; --comet-silver: #e5e7eb; }
    .space-font { font-family: 'Orbitron', sans-serif; font-weight: 600; } .alien-font { font-family: 'Exo 2', sans-serif; } .tech-font { font-family: 'Space Mono', monospace; }
    @keyframes cosmic-pulse { 0%, 100% { text-shadow: 0 0 5px currentColor; } 50% { text-shadow: 0 0 15px currentColor; } }
    @keyframes galaxy-flow { 0% { background-position: 0% 0%; } 50% { background-position: 100% 100%; } 100% { background-position: 0% 0%; } }
    .cosmic-glow { animation: cosmic-pulse 3s ease-in-out infinite alternate; } .galaxy-text { background: linear-gradient(135deg, var(--plasma-cyan), var(--aurora-green), var(--nebula-purple)); background-size: 200% 200%; animation: galaxy-flow 4s ease-in-out infinite; -webkit-background-clip: text; background-clip: text; -webkit-text-fill-color: transparent; }
    .section-bg { background: linear-gradient(135deg, rgba(2, 6, 23, 0.95), rgba(15, 23, 42, 0.9)); }
    .cosmic-card { background: linear-gradient(145deg, rgba(15, 23, 42, 0.9), rgba(30, 58, 138, 0.1)); border: 1px solid var(--plasma-cyan); border-radius: 20px; backdrop-filter: blur(15px); box-shadow: 0 8px 32px rgba(6, 182, 212, 0.2); transition: all 0.3s ease; }
    .cosmic-card:hover { transform: translateY(-5px); border-color: var(--aurora-green); }
    .space-button { background: linear-gradient(135deg, var(--cosmic-blue), var(--nebula-purple)); border: 1px solid var(--aurora-green); color: var(--starlight-white); padding: 14px 28px; border-radius: 25px; font-weight: 600; text-decoration: none; display: inline-flex; align-items: center; gap: 10px; transition: all 0.3s ease; }
    .space-button:hover { transform: translateY(-3px); box-shadow: 0 8px 25px rgba(30, 58, 138, 0.4); }
    .services-grid { display: grid; grid-template-columns: repeat(2, 1fr); gap: 20px; }
    .container { width: 100%; max-width: 1200px; margin: 0 auto; padding: 0 20px; }
    @media (max-width: 768px) { .services-grid { grid-template-columns: 1fr; } .container { padding: 0 16px; } }
  </style>

  <main>
    <section class="section-bg" style="padding: 100px 0 60px;">
      <div class="container">
        <div style="text-align: center; margin-bottom: 50px;">
          <div style="display: inline-flex; align-items: center; gap: 8px; background: rgba(6, 182, 212, 0.15); padding: 8px 20px; border-radius: 25px; border: 1px solid var(--plasma-cyan); margin-bottom: 24px;"><span class="tech-font" style="color: var(--plasma-cyan); font-size: 13px;">üìç {area.distance} FROM BASE - {area.postcode}</span></div>
