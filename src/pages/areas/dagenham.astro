---
import Layout from '../../layouts/Layout.astro';
import AreaPage from '../../components/AreaPage.astro';
import { getAreaBySlug } from '../../data/areas';

const area = getAreaBySlug('dagenham')!;
---

<Layout
  title={`PC Repair ${area.name} - Same Day Service`}
  description={`PC repair in ${area.name}, ${area.region}. Same day laptop repairs, virus removal & data recovery. Call 07971 331814.`}
  keywords={`computer repair ${area.name.toLowerCase()}, pc repair ${area.name.toLowerCase()}, laptop repair east london, virus removal ${area.name.toLowerCase()}`}
  breadcrumbs={[
    { name: 'Home', url: '/' },
    { name: 'Areas', url: '/areas/' },
    { name: area.name, url: `/areas/dagenham/` },
  ]}
>
  <AreaPage area={area} />
</Layout>
