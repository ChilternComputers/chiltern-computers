---
import Layout from '../../layouts/Layout.astro';
import AreaPage from '../../components/AreaPage.astro';
import { getAreaBySlug } from '../../data/areas';

const area = getAreaBySlug('chadwell-heath')!;
---

<Layout
  title={`PC Repair ${area.name} - Same Day Service`}
  description={`PC repair in ${area.name}, ${area.region}. Same day laptop repairs, virus removal & data recovery. Call 07971 331814.`}
  keywords={`computer repair chadwell-heath, pc repair chadwell-heath, laptop repair ${area.postcode.toLowerCase()}, virus removal chadwell-heath`}
  breadcrumbs={[
    { name: 'Home', url: '/' },
    { name: 'Areas', url: '/areas/' },
    { name: area.name, url: `/areas/chadwell-heath/` },
  ]}
>
  <AreaPage area={area} />
</Layout>
