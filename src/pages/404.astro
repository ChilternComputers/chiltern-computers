---
// src/pages/404.astro
import Layout from '../layouts/Layout.astro';

const title = "Page Not Found | Chiltern Computers";
const description = "The page you're looking for doesn't exist. Find our computer repair services in Harold Hill, Romford, and Essex.";
---

<Layout 
  title={title}
  description={description}
  keywords="computer repair romford, pc repair harold hill, laptop repair essex, chiltern computers"
>
    
    <!-- CSS Variables matching your cosmic theme -->
    <style>
        /* Import your existing CSS variables from Layout.astro */
        :root {
            --cosmic-blue: #1e3a8a;
            --nebula-purple: #7c3aed;
            --dark-purple: #4c1d95;
            --deep-purple: #312e81;
            --starlight-white: #f8fafc;
            --plasma-cyan: #06b6d4;
            --aurora-green: #10b981;
            --solar-orange: #f59e0b;
            --mars-red: #dc2626;
            --deep-space: #0f172a;
            --darker-space: #0c0f1a;
            --void-black: #020617;
            --asteroid-gray: #374151;
            --comet-silver: #e5e7eb;
        }
        /* Font Classes matching your theme */
        .space-font { font-family: 'Orbitron', sans-serif; font-weight: 600; }
        .alien-font { font-family: 'Exo 2', sans-serif; }
        .tech-font { font-family: 'Space Mono', monospace; }
        
        body {
            font-family: 'Exo 2', sans-serif;
            margin: 0;
            padding: 0;
            background: 
                radial-gradient(ellipse at 20% 80%, rgba(124, 58, 237, 0.15) 0%, transparent 50%),
                radial-gradient(ellipse at 80% 20%, rgba(30, 58, 138, 0.12) 0%, transparent 50%),
                var(--void-black);
            background-size: 800px 600px, 900px 700px;
            color: var(--starlight-white);
            min-height: 100vh;
            position: relative;
            overflow-x: hidden;
        }
        
        /* Cosmic background effects matching header */
        .cosmic-background {
            position: fixed;
            top: 0;
            left: 0;
            right: 0;
            bottom: 0;
            pointer-events: none;
            z-index: 0;
        }
        
        .cosmic-orb {
            position: absolute;
            border-radius: 50%;
            animation: float-cosmic 4s ease-in-out infinite;
        }
        
        .cosmic-orb:nth-child(1) {
            top: 20%;
            right: 10%;
            width: 100px;
            height: 100px;
            background: radial-gradient(circle, rgba(139,92,246,0.15) 0%, transparent 70%);
            animation-delay: 0s;
        }
        
        .cosmic-orb:nth-child(2) {
            bottom: 30%;
            left: 15%;
            width: 80px;
            height: 80px;
            background: radial-gradient(circle, rgba(16,185,129,0.12) 0%, transparent 70%);
            animation-delay: -2s;
        }
        
        .cosmic-orb:nth-child(3) {
            top: 60%;
            left: 60%;
            width: 60px;
            height: 60px;
            background: radial-gradient(circle, rgba(6,182,212,0.1) 0%, transparent 70%);
            animation-delay: -1s;
        }
        
        .container {
            max-width: 900px;
            margin: 0 auto;
            padding: 2rem;
            text-align: center;
            position: relative;
            z-index: 1;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }
        
        .error-code {
            font-size: 8rem;
            font-weight: bold;
            background: linear-gradient(135deg, var(--plasma-cyan), var(--aurora-green), var(--nebula-purple));
            background-size: 200% 200%;
            animation: galaxy-flow 4s ease-in-out infinite;
            -webkit-background-clip: text;
            background-clip: text;
            -webkit-text-fill-color: transparent;
            margin: 0;
            line-height: 1;
            text-shadow: 0 0 30px rgba(6,182,212,0.5);
        }
        
        .galaxy-text {
            background: linear-gradient(135deg, var(--plasma-cyan), var(--aurora-green), var(--nebula-purple));
            background-size: 200% 200%;
            animation: galaxy-flow 4s ease-in-out infinite;
            -webkit-background-clip: text;
            background-clip: text;
            -webkit-text-fill-color: transparent;
        }
        
        .cosmic-glow { 
            animation: cosmic-pulse 3s ease-in-out infinite alternate; 
        }
        
        .error-title {
            font-size: 2.5rem;
            color: var(--starlight-white);
            margin: 1rem 0;
            font-weight: 600;
        }
        
        .error-message {
            font-size: 1.2rem;
            color: var(--comet-silver);
            margin-bottom: 2rem;
            line-height: 1.6;
        }
        
        .cta-buttons {
            display: flex;
            gap: 1rem;
            justify-content: center;
            flex-wrap: wrap;
            margin: 2rem 0;
        }
        
        .cosmic-card {
            background: linear-gradient(145deg, rgba(15, 23, 42, 0.9), rgba(30, 58, 138, 0.1));
            border: 1px solid var(--plasma-cyan);
            border-radius: 12px;
            backdrop-filter: blur(10px);
            box-shadow: 0 4px 12px rgba(6, 182, 212, 0.2);
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }
        
        .cosmic-card::before {
            content: '';
            position: absolute;
            inset: 0;
            background: linear-gradient(45deg, transparent, rgba(6,182,212,0.2), transparent);
            opacity: 0;
            transition: opacity 0.3s ease;
        }
        
        .cosmic-card:hover::before {
            opacity: 1;
            animation: shimmer 2s ease-in-out infinite;
        }
        
        .cosmic-card:hover {
            transform: translateY(-4px);
            border-color: var(--aurora-green);
            box-shadow: 0 8px 25px rgba(16, 185, 129, 0.3);
        }
        
        .btn {
            display: inline-block;
            padding: 1rem 2rem;
            text-decoration: none;
            border-radius: 12px;
            font-weight: 600;
            transition: all 0.3s ease;
            position: relative;
            z-index: 1;
            border: 2px solid;
        }
        
        .btn-primary {
            background: linear-gradient(135deg, var(--cosmic-blue), var(--nebula-purple));
            border: 1px solid var(--aurora-green);
            color: var(--starlight-white);
            text-transform: uppercase;
            letter-spacing: 0.5px;
            position: relative;
            overflow: hidden;
        }
        
        .btn-secondary {
            background: rgba(139,92,246,0.15);
            border-color: var(--nebula-purple);
            color: var(--starlight-white);
        }
        
        .phone-link {
            background: rgba(139,92,246,0.15);
            border: 2px solid var(--nebula-purple);
            color: var(--starlight-white);
            padding: 1rem 1.5rem;
            text-decoration: none;
            border-radius: 12px;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            font-weight: 600;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }
        
        .phone-link::before {
            content: '';
            position: absolute;
            inset: 0;
            background: linear-gradient(45deg, transparent, rgba(139,92,246,0.3), transparent);
            opacity: 0;
            transition: opacity 0.3s ease;
        }
        
        .phone-link:hover::before {
            opacity: 1;
        }
        
        .phone-link:hover {
            transform: scale(1.05);
        }
        
        .services-grid {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 1.5rem;
            margin: 3rem 0;
            text-align: left;
            max-width: 900px;
            margin-left: auto;
            margin-right: auto;
        }
        
        .service-card {
            background: linear-gradient(145deg, rgba(15, 23, 42, 0.9), rgba(30, 58, 138, 0.1));
            border: 1px solid rgba(6,182,212,0.3);
            padding: 1.5rem;
            border-radius: 12px;
            backdrop-filter: blur(10px);
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
        }
        
        .service-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 2px;
            background: linear-gradient(90deg, transparent, var(--plasma-cyan), transparent);
            transition: left 0.3s ease;
        }
        
        .service-card:hover::before {
            left: 100%;
        }
        
        .service-card:hover {
            transform: translateY(-4px);
            border-color: var(--aurora-green);
            box-shadow: 0 8px 25px rgba(16, 185, 129, 0.3);
        }
        
        .service-card h3 {
            margin: 0 0 0.5rem 0;
            color: var(--aurora-green);
            font-size: 1.2rem;
        }
        
        .service-card a {
            color: var(--aurora-green);
            text-decoration: none;
            font-weight: 600;
        }
        
        .service-card a:hover {
            color: var(--plasma-cyan);
        }
        
        .service-card p {
            color: var(--comet-silver);
            margin: 0;
            line-height: 1.5;
        }
        
        .search-box {
            margin: 2rem 0;
        }
        
        .search-input {
            padding: 1rem;
            width: 350px;
            max-width: 100%;
            background: rgba(30,41,59,0.8);
            border: 2px solid rgba(6,182,212,0.3);
            border-radius: 12px;
            font-size: 1rem;
            color: var(--starlight-white);
            backdrop-filter: blur(10px);
            transition: all 0.3s ease;
        }
        
        .search-input:focus {
            outline: none;
            border-color: var(--plasma-cyan);
            box-shadow: 0 0 20px rgba(6,182,212,0.3);
        }
        
        .search-input::placeholder {
            color: var(--comet-silver);
        }
        
        .contact-section {
            margin-top: 3rem;
            padding: 2rem;
            background: linear-gradient(145deg, rgba(15, 23, 42, 0.9), rgba(30, 58, 138, 0.1));
            border: 1px solid rgba(6,182,212,0.3);
            border-radius: 12px;
            backdrop-filter: blur(10px);
        }
        
        .contact-section h3 {
            color: var(--starlight-white);
            margin-top: 0;
            font-size: 1.5rem;
        }
        
        .contact-section p {
            color: var(--comet-silver);
            line-height: 1.6;
        }
        
        .emergency-banner {
            background: linear-gradient(45deg, rgba(220,38,38,0.15), rgba(245,158,11,0.15));
            border: 2px solid rgba(220,38,38,0.3);
            border-radius: 12px;
            padding: 1rem;
            margin: 2rem 0;
            animation: emergencyPulse 3s ease-in-out infinite;
        }
        
        .emergency-banner p {
            margin: 0;
            font-weight: 600;
            color: var(--solar-orange);
        }
        
        .emergency-banner a {
            color: var(--aurora-green);
            text-decoration: none;
            font-weight: bold;
        }
        
        @keyframes cosmic-pulse {
            0%, 100% { text-shadow: 0 0 5px currentColor; }
            50% { text-shadow: 0 0 15px currentColor; }
        }

        @keyframes galaxy-flow {
            0% { background-position: 0% 0%; }
            50% { background-position: 100% 100%; }
            100% { background-position: 0% 0%; }
        }

        @keyframes float-cosmic {
            0%, 100% { transform: translateY(0px) rotate(0deg); }
            50% { transform: translateY(-10px) rotate(5deg); }
        }
        
        @keyframes shimmer {
            0% { transform: translateX(-200%); }
            50% { transform: translateX(200%); }
            100% { transform: translateX(-200%); }
        }
        
        @keyframes emergencyPulse {
            0%, 100% { opacity: 1; }
            50% { opacity: 0.8; }
        }
        
        @media (max-width: 768px) {
            .error-code {
                font-size: 5rem;
            }
            
            .error-title {
                font-size: 2rem;
            }
            
            .container {
                padding: 1rem;
            }
            
            .services-grid {
                grid-template-columns: 1fr;
                gap: 1rem;
                margin: 2rem 0;
            }
            
            .service-card {
                padding: 1.25rem;
            }
            
            .service-card h3 {
                font-size: 1rem;
                margin-bottom: 0.75rem;
            }
            
            .service-card p {
                font-size: 0.9rem;
                line-height: 1.4;
            }
            
            .search-input {
                width: 280px;
            }
            
            .cta-buttons {
                flex-direction: column;
                align-items: center;
                gap: 0.75rem;
            }
            
            .btn, .phone-link {
                width: 100%;
                max-width: 300px;
                text-align: center;
                justify-content: center;
            }
        }
        
        @media (max-width: 480px) {
            .container {
                padding: 0.75rem;
            }
            
            .error-code {
                font-size: 4rem;
            }
            
            .error-title {
                font-size: 1.5rem;
            }
            
            .error-message {
                font-size: 1rem;
            }
            
            .services-grid {
                gap: 0.75rem;
            }
            
            .service-card {
                padding: 1rem;
            }
            
            .contact-section {
                padding: 1.5rem;
            }
            
            .search-input {
                width: 100%;
                max-width: 280px;
            }
        }
        
        @media (min-width: 769px) and (max-width: 1024px) {
            .services-grid {
                grid-template-columns: repeat(2, 1fr);
                max-width: 800px;
            }
        }
        
        @media (min-width: 1025px) {
            .services-grid {
                grid-template-columns: repeat(2, 1fr);
                gap: 2rem;
                max-width: 900px;
            }
            
            .service-card {
                min-height: 180px;
                display: flex;
                flex-direction: column;
                justify-content: flex-start;
            }
            
            .service-card h3 {
                margin-bottom: 1rem;
            }
        }
    </style>

    <!-- Cosmic background effects -->
    <div class="cosmic-background">
        <div class="cosmic-orb"></div>
        <div class="cosmic-orb"></div>
        <div class="cosmic-orb"></div>
    </div>

    <div class="container">
        <h1 class="error-code space-font">404</h1>
        <h2 class="error-title space-font galaxy-text cosmic-glow">Page Not Found</h2>
        <p class="error-message alien-font">
            The page you're looking for doesn't exist. It might have been moved, deleted, or you entered the wrong URL.
        </p>

        <!-- Emergency contact banner matching your header style -->
        <div class="emergency-banner">
            <p class="tech-font">
                🚨 <span style="color: var(--aurora-green);">EMERGENCY REPAIRS?</span>
                Call <a href="tel:+447971331814">07971 331814</a> 🚨
            </p>
        </div>

        <div class="cta-buttons">
            <a href="/" class="cosmic-card btn btn-primary space-font">
                <span>🏠</span> Go to Homepage
            </a>
            <a href="/contact/" class="cosmic-card btn btn-secondary space-font">
                <span>📞</span> Contact Us
            </a>
            <a href="tel:+447971331814" class="phone-link space-font">
                <span>📱</span>
                <div>
                    <div class="tech-font" style="font-size: 0.8rem; color: var(--comet-silver);">CALL NOW</div>
                    <div>07971 331814</div>
                </div>
            </a>
        </div>

        <div class="search-box">
            <input 
                type="search" 
                placeholder="🔍 Search our site..." 
                class="search-input alien-font"
                onkeypress="if(event.key==='Enter') window.location.href='/search?q='+encodeURIComponent(this.value)"
            />
        </div>

        <h3 class="space-font galaxy-text cosmic-glow" style="margin-top: 3rem; color: var(--starlight-white); font-size: 1.8rem;">Popular Services</h3>
        <div class="services-grid">
            <div class="service-card">
                <h3><a href="/services/custom-pcs" class="space-font">🎮 Gaming PCs</a></h3>
                <p class="alien-font">Custom built gaming computers and high-performance workstations in Harold Hill and Romford.</p>
            </div>
            <div class="service-card">
                <h3><a href="/services/repairs/" class="space-font">🛠️ Computer Repairs</a></h3>
                <p class="alien-font">Fast and reliable PC and laptop repairs with same-day service available.</p>
            </div>
            <div class="service-card">
                <h3><a href="/services/new-used/" class="space-font">💻 PCs & Laptops</a></h3>
                <p class="alien-font">New and refurbished computers, laptops, and accessories for home and business.</p>
            </div>
            <div class="service-card">
                <h3><a href="/services/repairs/" class="space-font">🔧 Virus Removal</a></h3>
                <p class="alien-font">Complete malware and virus removal services to get your computer running smoothly.</p>
            </div>
        </div>

        <div class="contact-section">
            <h3 class="space-font cosmic-glow">🚀 Need Technical Support?</h3>
            <p class="alien-font">Our computer repair experts in Harold Hill are here to help. We provide professional IT support for homes and businesses across Romford, Essex, and surrounding areas.</p>
            <p class="alien-font"><strong>📍 Service Areas:</strong> Harold Hill, Romford, Hornchurch, Upminster, Rainham, and surrounding Essex areas.</p>
            <p class="alien-font"><strong>🕒 Hours:</strong> <span id="status-display">9AM - 9PM</span> Daily</p>
        </div>
    </div>

    <script>
        // Real-time status update matching your header
        function updateStatus() {
            const now = new Date();
            const hour = now.getHours();
            const statusElement = document.getElementById('status-display');
            if (statusElement) {
                if (hour >= 9 && hour < 21) {
                    statusElement.textContent = 'OPEN NOW - 9AM - 9PM';
                    statusElement.style.color = 'var(--aurora-green)';
                } else {
                    statusElement.textContent = '9AM - 9PM';
                    statusElement.style.color = 'var(--solar-orange)';
                }
            }
        }
        updateStatus();
        setInterval(updateStatus, 60000);

        // Analytics tracking for 404 errors
        if (typeof gtag !== 'undefined') {
            gtag('event', '404_error', {
                'page_location': window.location.href,
                'page_referrer': document.referrer
            });
        }
    </script>
</Layout>