---
import Layout from '../../layouts/Layout.astro';
---

<Layout 
  title="Custom Gaming Rigs in Havering"
  description="Looking for a high-performance custom PC in Harold Hill or Romford? Chiltern Computers offers tailored desktop builds for gaming, work, school, and content creation."
>
  <style>
    
    /* RESET & BASE */
    * {
      box-sizing: border-box;
      margin: 0;
      padding: 0;
    }
    
    html, body {
      overflow-x: hidden;
      width: 100%;
      scroll-behavior: smooth;
    }
    
    :root {
      /* Elden Ring Nightreign Inspired Palette */
      --nightreign-gold: #d4af37;
      --tarnished-bronze: #cd7f32;
      --mystic-blue: #1e40af;
      --shadow-purple: #581c87;
      --ember-orange: #ea580c;
      --frost-cyan: #0891b2;
      --grace-yellow: #fbbf24;
      --void-black: #0c0a09;
      --stone-gray: #44403c;
      --silver-light: #f1f5f9;
      --rune-glow: #fcd34d;
      --blood-red: #dc2626;
    }
    
    /* FONTS */
    .rune-font { font-family: 'Orbitron', sans-serif; font-weight: 700; }
    .tarnished-font { font-family: 'Exo 2', sans-serif; }
    .grace-font { font-family: 'Space Mono', monospace; }
    
    /* KEYFRAME ANIMATIONS */
    @keyframes grace-flicker {
      0%, 100% { 
        text-shadow: 0 0 10px var(--rune-glow), 0 0 20px var(--nightreign-gold), 0 0 30px var(--grace-yellow);
        opacity: 1;
      }
      25% { 
        text-shadow: 0 0 5px var(--rune-glow), 0 0 10px var(--nightreign-gold);
        opacity: 0.9;
      }
      50% { 
        text-shadow: 0 0 15px var(--rune-glow), 0 0 25px var(--nightreign-gold), 0 0 35px var(--grace-yellow);
        opacity: 1;
      }
      75% { 
        text-shadow: 0 0 8px var(--rune-glow), 0 0 12px var(--nightreign-gold);
        opacity: 0.95;
      }
    }
    
    @keyframes rune-circle {
      0% { transform: rotate(0deg) scale(1); }
      25% { transform: rotate(90deg) scale(1.05); }
      50% { transform: rotate(180deg) scale(1); }
      75% { transform: rotate(270deg) scale(0.95); }
      100% { transform: rotate(360deg) scale(1); }
    }
    
    @keyframes ember-float {
      0%, 100% { transform: translateY(0px) translateX(0px); opacity: 0.7; }
      25% { transform: translateY(-15px) translateX(5px); opacity: 1; }
      50% { transform: translateY(-8px) translateX(-3px); opacity: 0.8; }
      75% { transform: translateY(-20px) translateX(8px); opacity: 0.9; }
    }
    
    @keyframes nightfall-sweep {
      0% { background-position: 0% 0%; }
      50% { background-position: 100% 100%; }
      100% { background-position: 0% 0%; }
    }
    
    @keyframes co-op-pulse {
      0%, 100% { 
        box-shadow: 0 0 0 0 rgba(212, 175, 55, 0.7);
        transform: scale(1);
      }
      50% { 
        box-shadow: 0 0 0 20px rgba(212, 175, 55, 0);
        transform: scale(1.02);
      }
    }
    
    @keyframes tarnished-glow {
      0%, 100% { filter: drop-shadow(0 0 5px var(--nightreign-gold)); }
      50% { filter: drop-shadow(0 0 15px var(--rune-glow)) drop-shadow(0 0 25px var(--grace-yellow)); }
    }
    
    @keyframes button-shine {
      0% { left: -100%; }
      100% { left: 100%; }
    }
    
    /* SHARED UTILITY CLASSES */
    .grace-glow { animation: grace-flicker 3s ease-in-out infinite; }
    .rune-text {
      background: linear-gradient(135deg, var(--nightreign-gold), var(--grace-yellow), var(--tarnished-bronze), var(--rune-glow));
      background-size: 300% 300%;
      animation: nightfall-sweep 8s ease-in-out infinite;
      -webkit-background-clip: text;
      background-clip: text;
      -webkit-text-fill-color: transparent;
    }
    
    /* GLOBAL BACKGROUND */
    body {
      background: 
        radial-gradient(ellipse at 15% 25%, rgba(88, 28, 135, 0.2) 0%, transparent 50%),
        radial-gradient(ellipse at 85% 75%, rgba(30, 64, 175, 0.15) 0%, transparent 50%),
        radial-gradient(ellipse at 50% 10%, rgba(212, 175, 55, 0.1) 0%, transparent 60%),
        radial-gradient(ellipse at 20% 80%, rgba(220, 38, 38, 0.08) 0%, transparent 50%),
        linear-gradient(135deg, var(--void-black) 0%, #1a1917 50%, var(--void-black) 100%);
      background-attachment: fixed;
      animation: nightfall-sweep 45s ease-in-out infinite;
      min-height: 100vh;
    }
    
    /* CONTAINER */
    .container {
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 20px;
    }
    
    /* HERO SECTION */
    .hero {
      min-height: 100vh;
      display: flex;
      align-items: center;
      justify-content: center;
      text-align: center;
      position: relative;
      overflow: hidden;
      padding: 20px;
      /* Fixed padding for header space */
      padding-top: 120px; /* Account for header + trust banner */
    }
    
    .hero::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: 
        url('/eldon.webp') center/cover no-repeat,
        linear-gradient(135deg, rgba(12, 10, 9, 0.8) 0%, rgba(68, 64, 60, 0.6) 50%, rgba(12, 10, 9, 0.9) 100%);
      background-blend-mode: overlay;
      animation: nightfall-sweep 35s ease-in-out infinite reverse;
      filter: brightness(0.7) contrast(1.1) saturate(1.2);
    }
    
    .hero::after {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: 
        radial-gradient(circle at 30% 30%, rgba(212, 175, 55, 0.2) 0%, transparent 50%),
        radial-gradient(circle at 70% 70%, rgba(251, 191, 36, 0.15) 0%, transparent 50%),
        radial-gradient(circle at 50% 50%, rgba(234, 88, 12, 0.12) 0%, transparent 70%);
      animation: nightfall-sweep 40s ease-in-out infinite;
      z-index: 1;
    }
    
    .hero-content {
      position: relative;
      z-index: 3;
      max-width: 900px;
      background: rgba(12, 10, 9, 0.3);
      backdrop-filter: blur(10px);
      border-radius: 20px;
      padding: 40px 32px;
      border: 2px solid rgba(212, 175, 55, 0.4);
      box-shadow: 
        0 20px 40px rgba(0, 0, 0, 0.5),
        0 0 50px rgba(212, 175, 55, 0.2);
    }
    
    .hero-title {
      font-size: clamp(40px, 10vw, 80px);
      line-height: 1.1;
      margin-bottom: 24px;
    }
    
    .hero-subtitle {
      font-size: clamp(18px, 4vw, 24px);
      color: var(--silver-light);
      margin-bottom: 40px;
      line-height: 1.4;
      animation: ember-float 8s ease-in-out infinite;
    }
    
    /* FLOATING RUNES */
    .floating-runes {
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      pointer-events: none;
      overflow: hidden;
      z-index: 2;
    }
    
    .floating-rune {
      position: absolute;
      font-size: 32px;
      opacity: 0.4;
      animation: ember-float 12s ease-in-out infinite;
      filter: drop-shadow(0 0 8px currentColor);
    }
    
    .floating-rune:nth-child(1) { top: 15%; left: 12%; animation-delay: 0s; color: var(--nightreign-gold); }
    .floating-rune:nth-child(2) { top: 65%; right: 18%; animation-delay: 3s; color: var(--grace-yellow); }
    .floating-rune:nth-child(3) { bottom: 25%; left: 25%; animation-delay: 6s; color: var(--tarnished-bronze); }
    .floating-rune:nth-child(4) { top: 35%; right: 30%; animation-delay: 9s; color: var(--ember-orange); }
    .floating-rune:nth-child(5) { top: 80%; left: 60%; animation-delay: 1.5s; color: var(--frost-cyan); }
    
    /* SERVICES SHOWCASE */
    .services-showcase {
      padding: 80px 20px;
      position: relative;
      background: 
        url('/eldon.webp') center/cover no-repeat fixed,
        linear-gradient(135deg, rgba(12, 10, 9, 0.95) 0%, rgba(68, 64, 60, 0.9) 50%, rgba(12, 10, 9, 0.95) 100%);
      background-blend-mode: overlay;
    }
    
    .services-showcase::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: 
        radial-gradient(ellipse at 20% 20%, rgba(212, 175, 55, 0.1) 0%, transparent 60%),
        radial-gradient(ellipse at 80% 80%, rgba(251, 191, 36, 0.08) 0%, transparent 60%);
      animation: nightfall-sweep 50s ease-in-out infinite;
    }
    
    .showcase-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
      gap: 40px;
      position: relative;
      z-index: 2;
    }
    
    .service-card {
      background: linear-gradient(145deg, rgba(12, 10, 9, 0.95), rgba(68, 64, 60, 0.2));
      border: 2px solid transparent;
      border-radius: 20px;
      padding: 40px 32px;
      text-align: center;
      position: relative;
      overflow: hidden;
      transition: all 0.4s ease;
      backdrop-filter: blur(20px);
      animation: co-op-pulse 8s ease-in-out infinite;
    }
    
    .service-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      border-radius: 20px;
      padding: 3px;
      background: linear-gradient(135deg, var(--nightreign-gold), var(--grace-yellow), var(--tarnished-bronze));
      mask: linear-gradient(#fff 0 0) content-box, linear-gradient(#fff 0 0);
      mask-composite: xor;
      opacity: 0.7;
      transition: opacity 0.4s ease;
    }
    
    .service-card:hover {
      transform: translateY(-15px) scale(1.03);
      box-shadow: 
        0 25px 50px rgba(212, 175, 55, 0.3),
        0 0 50px rgba(251, 191, 36, 0.2);
      animation-play-state: paused;
    }
    
    .service-card:hover::before {
      opacity: 1;
      background: linear-gradient(135deg, var(--rune-glow), var(--grace-yellow), var(--nightreign-gold));
    }
    
    /* SERVICE ICONS */
    .service-icon {
      width: 90px;
      height: 90px;
      margin: 0 auto 24px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 36px;
      position: relative;
      animation: rune-circle 25s linear infinite;
      border: 3px solid currentColor;
      box-shadow: 0 0 20px currentColor;
    }
    
    .service-card:hover .service-icon {
      animation-play-state: paused;
      transform: scale(1.15);
      animation: tarnished-glow 2s ease-in-out infinite;
    }
    
    .service-title {
      font-size: 26px;
      margin-bottom: 18px;
      line-height: 1.2;
    }
    
    .service-description {
      color: var(--silver-light);
      margin-bottom: 32px;
      line-height: 1.6;
      font-size: 16px;
    }
    
    /* SERVICE THEMES */
    .gaming { --theme-color: var(--blood-red); }
    .gaming .service-icon { 
      background: rgba(220, 38, 38, 0.3); 
      color: var(--blood-red);
      box-shadow: 0 0 25px rgba(220, 38, 38, 0.6);
    }
    
    .office { --theme-color: var(--frost-cyan); }
    .office .service-icon { 
      background: rgba(8, 145, 178, 0.3); 
      color: var(--frost-cyan);
      box-shadow: 0 0 25px rgba(8, 145, 178, 0.6);
    }
    
    .student { --theme-color: var(--grace-yellow); }
    .student .service-icon { 
      background: rgba(251, 191, 36, 0.3); 
      color: var(--grace-yellow);
      box-shadow: 0 0 25px rgba(251, 191, 36, 0.6);
    }
    
    /* SECTION STYLING */
    .section {
      padding: 80px 20px;
      position: relative;
    }
    
    .section-header {
      text-align: center;
      margin-bottom: 60px;
    }
    
    .section-title {
      font-size: clamp(28px, 6vw, 44px);
      margin-bottom: 16px;
      line-height: 1.2;
    }
    
    .section-subtitle {
      color: var(--silver-light);
      font-size: clamp(16px, 3vw, 18px);
      max-width: 600px;
      margin: 0 auto;
      line-height: 1.5;
    }
    
    /* PROCESS SECTION */
    .process-section {
      background: linear-gradient(135deg, rgba(12, 10, 9, 0.9), rgba(68, 64, 60, 0.2));
      border-top: 2px solid var(--nightreign-gold);
      border-bottom: 2px solid var(--tarnished-bronze);
    }
    
    .timeline {
      position: relative;
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
      gap: 32px;
      margin-top: 40px;
    }
    
    .timeline::before {
      content: '';
      position: absolute;
      top: 50%;
      left: 0;
      right: 0;
      height: 3px;
      background: linear-gradient(90deg, var(--nightreign-gold), var(--grace-yellow), var(--tarnished-bronze), var(--rune-glow));
      transform: translateY(-50%);
      z-index: 1;
      border-radius: 2px;
      box-shadow: 0 0 10px var(--nightreign-gold);
    }
    
    .timeline-step {
      background: linear-gradient(145deg, rgba(12, 10, 9, 0.95), rgba(212, 175, 55, 0.1));
      border: 2px solid var(--tarnished-bronze);
      border-radius: 16px;
      padding: 32px 24px;
      text-align: center;
      position: relative;
      z-index: 2;
      transition: all 0.4s ease;
      backdrop-filter: blur(15px);
    }
    
    .timeline-step:hover {
      transform: translateY(-10px);
      border-color: var(--rune-glow);
      box-shadow: 
        0 15px 35px rgba(212, 175, 55, 0.4),
        0 0 30px rgba(251, 191, 36, 0.3);
    }
    
    .step-icon {
      width: 70px;
      height: 70px;
      margin: 0 auto 20px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 28px;
      border: 3px solid currentColor;
      animation: rune-circle 20s linear infinite;
      box-shadow: 0 0 15px currentColor;
    }
    
    .step-title {
      font-size: 18px;
      margin-bottom: 12px;
      line-height: 1.3;
    }
    
    .step-description {
      color: var(--silver-light);
      font-size: 14px;
      line-height: 1.5;
    }
    
    /* TESTIMONIALS SECTION */
    .testimonials-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(320px, 1fr));
      gap: 32px;
      margin-top: 40px;
    }
    
    .testimonial-card {
      background: linear-gradient(145deg, rgba(12, 10, 9, 0.95), rgba(212, 175, 55, 0.1));
      border: 2px solid var(--ember-orange);
      border-radius: 20px;
      padding: 32px;
      position: relative;
      transition: all 0.4s ease;
      backdrop-filter: blur(15px);
      animation: co-op-pulse 10s ease-in-out infinite;
    }
    
    .testimonial-card:hover {
      transform: translateY(-10px);
      border-color: var(--nightreign-gold);
      box-shadow: 
        0 20px 40px rgba(212, 175, 55, 0.3),
        0 0 40px rgba(251, 191, 36, 0.2);
      animation-play-state: paused;
    }
    
    .rune-stars {
      color: var(--nightreign-gold);
      font-size: 22px;
      margin-bottom: 20px;
      animation: grace-flicker 4s ease-in-out infinite;
      filter: drop-shadow(0 0 5px var(--rune-glow));
    }
    
    .testimonial-text {
      color: var(--silver-light);
      font-style: italic;
      margin-bottom: 20px;
      line-height: 1.6;
      font-size: 16px;
    }
    
    .testimonial-author {
      color: var(--frost-cyan);
      font-size: 14px;
      font-weight: 600;
    }
    
    /* CTA SECTION */
    .cta-section {
      background: 
        url('/eldon.webp') center/cover no-repeat fixed,
        linear-gradient(135deg, rgba(88, 28, 135, 0.9), rgba(30, 64, 175, 0.8), rgba(12, 10, 9, 0.9));
      background-blend-mode: multiply;
      text-align: center;
      border-top: 3px solid var(--nightreign-gold);
      overflow: hidden;
    }
    
    .cta-section::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: 
        radial-gradient(circle at 30% 30%, rgba(212, 175, 55, 0.3) 0%, transparent 50%),
        radial-gradient(circle at 70% 70%, rgba(251, 191, 36, 0.2) 0%, transparent 50%),
        radial-gradient(circle at 50% 10%, rgba(234, 88, 12, 0.15) 0%, transparent 60%);
      animation: nightfall-sweep 30s ease-in-out infinite;
    }
    
    .cta-content {
      position: relative;
      z-index: 3;
      max-width: 700px;
      margin: 0 auto;
      padding: 40px 32px;
      background: rgba(12, 10, 9, 0.4);
      backdrop-filter: blur(15px);
      border-radius: 20px;
      border: 2px solid rgba(212, 175, 55, 0.5);
      box-shadow: 
        0 25px 50px rgba(0, 0, 0, 0.6),
        0 0 60px rgba(212, 175, 55, 0.3);
    }
    
    .cta-title {
      font-size: clamp(32px, 7vw, 48px);
      color: var(--silver-light);
      margin-bottom: 20px;
      line-height: 1.2;
    }
    
    .cta-description {
      color: var(--silver-light);
      font-size: clamp(16px, 3vw, 20px);
      margin-bottom: 40px;
      line-height: 1.5;
    }
    
    /* BUTTONS */
    .tarnished-button {
      background: linear-gradient(135deg, var(--nightreign-gold), var(--grace-yellow));
      border: 3px solid var(--rune-glow);
      color: var(--void-black);
      padding: 18px 36px;
      border-radius: 50px;
      font-weight: 700;
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      gap: 12px;
      transition: all 0.4s ease;
      font-size: 16px;
      position: relative;
      overflow: hidden;
      box-shadow: 0 0 20px rgba(212, 175, 55, 0.4);
    }
    
    .tarnished-button::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.3), transparent);
      transition: left 0.6s ease;
    }
    
    .tarnished-button:hover {
      transform: translateY(-4px) scale(1.05);
      box-shadow: 
        0 15px 30px rgba(212, 175, 55, 0.5),
        0 0 40px rgba(251, 191, 36, 0.4);
      border-color: var(--silver-light);
      background: linear-gradient(135deg, var(--rune-glow), var(--nightreign-gold));
    }
    
    .tarnished-button:hover::before {
      left: 100%;
    }
    
    .button-small {
      padding: 14px 28px;
      font-size: 14px;
      background: linear-gradient(135deg, var(--tarnished-bronze), var(--ember-orange));
      border: 2px solid var(--nightreign-gold);
      color: var(--silver-light);
      box-shadow: 0 0 15px rgba(205, 127, 50, 0.4);
    }
    
    .button-small:hover {
      border-color: var(--rune-glow);
      box-shadow: 
        0 10px 25px rgba(205, 127, 50, 0.5),
        0 0 30px rgba(212, 175, 55, 0.3);
      background: linear-gradient(135deg, var(--ember-orange), var(--nightreign-gold));
    }

    /* FOOTER ADAPTATION STYLES - Make existing footer visible with theme */
    :global(footer) {
      background: 
        linear-gradient(135deg, rgba(12, 10, 9, 0.95), rgba(68, 64, 60, 0.9)) !important;
      border-top: 3px solid var(--nightreign-gold) !important;
      color: var(--silver-light) !important;
      position: relative;
      z-index: 10;
    }

    :global(footer *) {
      color: var(--silver-light) !important;
    }

    :global(footer h1, footer h2, footer h3, footer h4, footer h5, footer h6) {
      color: var(--nightreign-gold) !important;
      text-shadow: 0 0 10px var(--rune-glow) !important;
      font-family: 'Orbitron', sans-serif !important;
    }

    :global(footer a) {
      color: var(--frost-cyan) !important;
      transition: all 0.3s ease !important;
    }

    :global(footer a:hover) {
      color: var(--grace-yellow) !important;
      text-shadow: 0 0 5px var(--rune-glow) !important;
    }

    :global(footer .contact-info, footer .address, footer .phone, footer .email) {
      color: var(--silver-light) !important;
      font-family: 'Exo 2', sans-serif !important;
    }

    :global(footer .operating-hours, footer .hours) {
      background: rgba(8, 145, 178, 0.1) !important;
      border: 1px solid var(--frost-cyan) !important;
      border-radius: 8px !important;
      padding: 16px !important;
      color: var(--silver-light) !important;
    }

    :global(footer .social-links a, footer .social a) {
      background: rgba(212, 175, 55, 0.2) !important;
      border: 1px solid var(--nightreign-gold) !important;
      border-radius: 8px !important;
      padding: 8px !important;
      transition: all 0.3s ease !important;
    }

    :global(footer .social-links a:hover, footer .social a:hover) {
      background: rgba(212, 175, 55, 0.4) !important;
      border-color: var(--rune-glow) !important;
      box-shadow: 0 0 15px rgba(212, 175, 55, 0.3) !important;
    }
    
    /* RESPONSIVE DESIGN - FIXED MOBILE PADDING */
    @media (max-width: 768px) {
      .container {
        padding: 0 16px;
      }
      
      .hero {
        padding: 16px;
        /* FIXED: Ensure consistent padding with desktop for mobile */
        padding-top: 140px; /* Account for header + trust banner on mobile */
        min-height: calc(100vh - 20px); /* Adjust min-height for better mobile experience */
      }
      
      .section {
        padding: 60px 16px;
      }
      
      .services-showcase {
        padding: 60px 16px; /* Match section padding */
      }
      
      .showcase-grid {
        grid-template-columns: 1fr;
        gap: 32px;
      }
      
      .timeline {
        grid-template-columns: 1fr;
        gap: 24px;
      }
      
      .timeline::before {
        display: none;
      }
      
      .testimonials-grid {
        grid-template-columns: 1fr;
        gap: 24px;
      }
      
      .service-card,
      .timeline-step,
      .testimonial-card {
        padding: 24px 20px;
      }
      
      .floating-rune {
        font-size: 24px;
      }
      
      .hero-content {
        padding: 32px 24px;
      }
      
      .cta-content {
        padding: 32px 24px;
      }
    }
    
