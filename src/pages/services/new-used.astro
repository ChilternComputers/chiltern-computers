  <style>
    @import url('https://fonts.googleapis.com/css2?family=Orbitron:wght@400;600;700&family=Exo+2:wght@300;400;500;600&family=Space+Mono:wght@400;700&display=swap');
    
    /* MOBILE OVERFLOW FIXES */
    * {
      box-sizing: border-box;
    }
    
    html, body {
      overflow-x: hidden;
      width: 100%;
    }
    
    :root {
      --cosmic-blue: #1e3a8a;
      --nebula-purple: #7c3aed;
      --dark-purple: #4c1d95;
      --deep-purple: #312e81;
      --starlight-white: #f8fafc;
      --plasma-cyan: #06b6d4;
      --aurora-green: #10b981;
      --solar-orange: #f59e0b;
      --mars-red: #dc2626;
      --deep-space: #0f172a;
      --darker-space: #0c0f1a;
      --void-black: #020617;
      --asteroid-gray: #374151;
      --comet-silver: #e5e7eb;
      
      /* CONSISTENT SPACING SYSTEM */
      --section-padding: 100px 0;
      --section-gap: 80px;
      --content-gap: 60px;
      --card-gap: 32px;
      --small-gap: 24px;
    }
    
    /* FONTS */
    .space-font { font-family: 'Orbitron', sans-serif; font-weight: 600; }
    .alien-font { font-family: 'Exo 2', sans-serif; }
    .tech-font { font-family: 'Space Mono', monospace; }
    
    /* ANIMATIONS */
    @keyframes orbit {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }
    
    @keyframes float-cosmic {
      0%, 100% { transform: translateY(0px); }
      50% { transform: translateY(-8px); }
    }
    
    @keyframes cosmic-pulse {
      0%, 100% { text-shadow: 0 0 5px currentColor; }
      50% { text-shadow: 0 0 15px currentColor; }
    }
    
    @keyframes galaxy-flow {
      0% { background-position: 0% 0%; }
      50% { background-position: 100% 100%; }
      100% { background-position: 0% 0%; }
    }
    
    @keyframes price-glow {
      0%, 100% { 
        text-shadow: 0 0 10px var(--aurora-green); 
        transform: scale(1);
      }
      50% { 
        text-shadow: 0 0 20px var(--aurora-green), 0 0 30px var(--plasma-cyan); 
        transform: scale(1.05);
      }
    }
    
    @keyframes shimmer {
      0% { left: -100%; }
      100% { left: 100%; }
    }
    
    @keyframes glow-pulse {
      0%, 100% { box-shadow: 0 0 20px rgba(16, 185, 129, 0.3); }
      50% { box-shadow: 0 0 40px rgba(16, 185, 129, 0.6); }
    }
    
    /* SHARED STYLES */
    .cosmic-glow { animation: cosmic-pulse 3s ease-in-out infinite alternate; }
    .galaxy-text {
      background: linear-gradient(135deg, var(--plasma-cyan), var(--aurora-green), var(--nebula-purple));
      background-size: 200% 200%;
      animation: galaxy-flow 4s ease-in-out infinite;
      -webkit-background-clip: text;
      background-clip: text;
      -webkit-text-fill-color: transparent;
    }
    
    .price-glow {
      animation: price-glow 2s ease-in-out infinite;
      color: var(--aurora-green);
    }
    
    /* CONSISTENT SECTION BACKGROUNDS */
    .section-bg {
      background: 
        linear-gradient(135deg, rgba(2, 6, 23, 0.85), rgba(15, 23, 42, 0.75)),
        url('/new-used.webp');
      background-size: cover;
      background-position: center;
      background-attachment: fixed;
      position: relative;
    }
    
    .section-bg-alt {
      background: 
        linear-gradient(135deg, rgba(2, 6, 23, 0.9), rgba(15, 23, 42, 0.8)),
        url('/new-used.webp');
      background-size: cover;
      background-position: center;
      background-attachment: fixed;
      position: relative;
    }
    
    /* CONSISTENT SECTION STYLING */
    .main-section {
      padding: var(--section-padding);
    }
    
    .section-header {
      text-align: center;
      margin-bottom: var(--content-gap);
    }
    
    .section-title {
      font-size: clamp(32px, 6vw, 48px);
      margin-bottom: var(--small-gap);
    }
    
    .section-divider {
      height: 4px;
      width: 150px;
      background: linear-gradient(90deg, var(--aurora-green), var(--plasma-cyan));
      margin: 0 auto var(--small-gap);
      border-radius: 2px;
      position: relative;
      overflow: hidden;
    }
    
    .section-divider::after {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255,255,255,0.4), transparent);
      animation: shimmer 2s infinite;
    }
    
    .section-subtitle {
      color: var(--comet-silver);
      max-width: 700px;
      margin: 0 auto;
      font-size: 18px;
      line-height: 1.6;
    }
    
    /* CARD STYLES */
    .cosmic-card {
      background: linear-gradient(145deg, rgba(15, 23, 42, 0.9), rgba(30, 58, 138, 0.1));
      border: 1px solid var(--plasma-cyan);
      border-radius: 20px;
      backdrop-filter: blur(15px);
      box-shadow: 0 8px 32px rgba(6, 182, 212, 0.2);
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
    }
    
    .cosmic-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 1px;
      background: linear-gradient(90deg, transparent, var(--aurora-green), transparent);
      opacity: 0;
      transition: opacity 0.3s ease;
    }
    
    .cosmic-card:hover {
      transform: translateY(-8px);
      border-color: var(--aurora-green);
      box-shadow: 0 16px 40px rgba(16, 185, 129, 0.3);
    }
    
    .cosmic-card:hover::before {
      opacity: 1;
    }
    
    /* PRODUCT CARDS */
    .product-card {
      background: linear-gradient(145deg, rgba(15, 23, 42, 0.95), rgba(30, 58, 138, 0.15));
      border: 2px solid var(--plasma-cyan);
      border-radius: 24px;
      backdrop-filter: blur(20px);
      box-shadow: 0 12px 40px rgba(6, 182, 212, 0.25);
      transition: all 0.4s ease;
      position: relative;
      overflow: hidden;
    }
    
    .product-card::after {
      content: '';
      position: absolute;
      top: -2px;
      left: -2px;
      right: -2px;
      bottom: -2px;
      background: linear-gradient(45deg, var(--plasma-cyan), var(--aurora-green), var(--nebula-purple), var(--solar-orange));
      background-size: 300% 300%;
      animation: galaxy-flow 6s ease-in-out infinite;
      border-radius: 24px;
      z-index: -1;
      opacity: 0;
      transition: opacity 0.4s ease;
    }
    
    .product-card:hover {
      transform: translateY(-12px) scale(1.02);
      box-shadow: 0 20px 60px rgba(16, 185, 129, 0.4);
    }
    
    .product-card:hover::after {
      opacity: 1;
    }
    
    /* BUTTON STYLES */
    .space-button {
      background: linear-gradient(135deg, var(--cosmic-blue), var(--nebula-purple));
      border: 1px solid var(--aurora-green);
      color: var(--starlight-white);
      padding: 14px 28px;
      border-radius: 25px;
      font-weight: 600;
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      gap: 10px;
      transition: all 0.3s ease;
      font-size: 14px;
      position: relative;
      overflow: hidden;
      margin: 0 8px;
    }
    
    .space-button::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
      transition: left 0.5s ease;
    }
    
    .space-button:hover::before {
      left: 100%;
    }
    
    .space-button:hover {
      transform: translateY(-3px);
      box-shadow: 0 8px 25px rgba(30, 58, 138, 0.4);
    }
    
    /* RESERVE BUTTON */
    .reserve-button {
      background: linear-gradient(135deg, var(--aurora-green), var(--plasma-cyan));
      border: 1px solid var(--starlight-white);
      color: var(--deep-space);
      padding: 12px 24px;
      border-radius: 20px;
      font-weight: 700;
      text-decoration: none;
      display: block;
      text-align: center;
      transition: all 0.3s ease;
      font-size: 14px;
      position: relative;
      overflow: hidden;
    }
    
    .reserve-button:hover {
      transform: translateY(-2px);
      box-shadow: 0 6px 20px rgba(16, 185, 129, 0.5);
      background: linear-gradient(135deg, var(--plasma-cyan), var(--aurora-green));
    }
    
    /* FAQ STYLES */
    .faq-item {
      background: linear-gradient(145deg, rgba(15, 23, 42, 0.8), rgba(30, 58, 138, 0.1));
      border: 2px solid transparent;
      border-radius: 20px;
      backdrop-filter: blur(15px);
      transition: all 0.4s ease;
      position: relative;
      overflow: hidden;
      margin-bottom: var(--small-gap);
    }
    
    .faq-item::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: linear-gradient(135deg, var(--plasma-cyan), var(--aurora-green), var(--nebula-purple));
      opacity: 0;
      transition: opacity 0.4s ease;
      z-index: -1;
      border-radius: 20px;
    }
    
    .faq-item:hover::before {
      opacity: 0.1;
    }
    
    .faq-item:hover {
      transform: translateY(-5px);
      border-color: var(--aurora-green);
      animation: glow-pulse 2s infinite;
    }
    
    .faq-question {
      padding: 28px 32px;
      cursor: pointer;
      display: flex;
      justify-content: space-between;
      align-items: center;
      transition: all 0.3s ease;
      position: relative;
    }
    
    .faq-question:hover {
      background: rgba(16, 185, 129, 0.05);
    }
    
    .faq-question h3 {
      margin: 0;
      font-size: 20px;
      color: var(--plasma-cyan);
      transition: color 0.3s ease;
      flex: 1;
      padding-right: 20px;
    }
    
    .faq-item:hover .faq-question h3 {
      color: var(--aurora-green);
    }
    
    .faq-icon {
      font-size: 24px;
      color: var(--aurora-green);
      transition: all 0.3s ease;
      min-width: 24px;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    
    .faq-item.active .faq-icon {
      transform: rotate(180deg);
      color: var(--nebula-purple);
    }
    
    .faq-answer {
      max-height: 0;
      overflow: hidden;
      transition: all 0.4s ease;
      opacity: 0;
    }
    
    .faq-item.active .faq-answer {
      max-height: 300px;
      opacity: 1;
    }
    
    .faq-answer-content {
      padding: 0 32px 32px;
      color: var(--starlight-white);
      font-size: 16px;
      line-height: 1.7;
      border-top: 1px solid rgba(16, 185, 129, 0.2);
      margin-top: 0;
      padding-top: 24px;
    }
    
    .faq-highlight {
      background: linear-gradient(135deg, rgba(16, 185, 129, 0.1), rgba(6, 182, 212, 0.1));
      border: 2px solid var(--aurora-green);
      animation: glow-pulse 3s infinite;
    }
    
    .faq-highlight .faq-question h3 {
      color: var(--aurora-green);
    }
    
    /* GRIDS */
    .benefits-grid { 
      display: grid; 
      grid-template-columns: repeat(auto-fit, minmax(250px, 1fr)); 
      gap: var(--small-gap); 
    }
    .products-grid { 
      display: grid; 
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); 
      gap: var(--card-gap); 
    }
    .process-grid { 
      display: grid; 
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); 
      gap: var(--small-gap); 
    }
    .testimonials-grid { 
      display: grid; 
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr)); 
      gap: var(--small-gap); 
    }
    .faq-grid {
      display: grid;
      grid-template-columns: 1fr;
      gap: 20px;
      max-width: 900px;
      margin: 0 auto;
    }
    
    /* CONTAINER */
    .container {
      width: 100%;
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 20px;
      box-sizing: border-box;
    }
    
    /* SPEC LIST STYLES */
    .spec-list {
      list-style: none;
      padding: 0;
      margin: 0;
    }
    
    .spec-list li {
      display: flex;
      align-items: center;
      margin-bottom: 8px;
      color: var(--starlight-white);
      font-size: 14px;
    }
    
    .spec-list li::before {
      content: '‚úì';
      color: var(--aurora-green);
      font-weight: bold;
      margin-right: 12px;
      font-size: 16px;
    }
    
    /* MOBILE OPTIMIZATIONS */
    @media (max-width: 768px) {
      :root {
        --section-padding: 80px 0;
        --section-gap: 60px;
        --content-gap: 40px;
        --card-gap: 24px;
        --small-gap: 16px;
      }
      
      .section-bg,
      .section-bg-alt {
        background-attachment: scroll;
      }
      
      .container {
        padding: 0 16px;
      }
      
      .benefits-grid { 
        grid-template-columns: repeat(2, 1fr); 
        gap: var(--small-gap); 
      }
      .products-grid { 
        grid-template-columns: 1fr; 
        gap: var(--small-gap); 
      }
      .process-grid { 
        grid-template-columns: repeat(2, 1fr); 
        gap: var(--small-gap); 
      }
      .testimonials-grid { 
        grid-template-columns: 1fr; 
        gap: var(--small-gap); 
      }
      .space-button { 
        padding: 12px 24px; 
        font-size: 13px; 
        margin: 4px;
      }
      
      .faq-question {
        padding: 24px 20px;
      }
      
      .faq-question h3 {
        font-size: 18px;
      }
      
      .faq-answer-content {
        padding: 0 20px 24px;
        font-size: 14px;
      }
    }
    
    @media (max-width: 480px) {
      :root {
        --section-padding: 60px 0;
        --section-gap: 40px;
        --content-gap: 30px;
        --card-gap: 16px;
        --small-gap: 12px;
      }
      
      .container {
        padding: 0 12px;
      }
      
      .benefits-grid {
        grid-template-columns: 1fr;
      }
      
      .process-grid {
        grid-template-columns: 1fr;
      }
      
      .space-button {
        padding: 10px 20px;
        font-size: 12px;
      }
    }
  </style>

