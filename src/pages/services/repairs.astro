  <style>
    
    /* MOBILE OVERFLOW FIXES */
    * {
      box-sizing: border-box;
    }
    
    html, body {
      overflow-x: hidden;
      width: 100%;
    }
    
    :root {
      --cosmic-blue: #1e3a8a;
      --nebula-purple: #7c3aed;
      --dark-purple: #4c1d95;
      --deep-purple: #312e81;
      --starlight-white: #f8fafc;
      --plasma-cyan: #06b6d4;
      --aurora-green: #10b981;
      --solar-orange: #f59e0b;
      --mars-red: #dc2626;
      --deep-space: #0f172a;
      --darker-space: #0c0f1a;
      --void-black: #020617;
      --asteroid-gray: #374151;
      --comet-silver: #e5e7eb;
    }
    
    /* FONTS */
    .space-font { font-family: 'Orbitron', sans-serif; font-weight: 600; }
    .alien-font { font-family: 'Exo 2', sans-serif; }
    .tech-font { font-family: 'Space Mono', monospace; }
    
    /* ANIMATIONS */
    @keyframes orbit {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }
    
    @keyframes float-cosmic {
      0%, 100% { transform: translateY(0px); }
      50% { transform: translateY(-8px); }
    }
    
    @keyframes cosmic-pulse {
      0%, 100% { text-shadow: 0 0 5px currentColor; }
      50% { text-shadow: 0 0 15px currentColor; }
    }
    
    @keyframes galaxy-flow {
      0% { background-position: 0% 0%; }
      50% { background-position: 100% 100%; }
      100% { background-position: 0% 0%; }
    }
    
    /* SHARED STYLES */
    .cosmic-glow { animation: cosmic-pulse 3s ease-in-out infinite alternate; }
    .galaxy-text {
      background: linear-gradient(135deg, var(--plasma-cyan), var(--aurora-green), var(--nebula-purple));
      background-size: 200% 200%;
      animation: galaxy-flow 4s ease-in-out infinite;
      -webkit-background-clip: text;
      background-clip: text;
      -webkit-text-fill-color: transparent;
    }
    
    /* BACKGROUND WITH IMAGE */
    .repair-hero-bg {
      background: 
        linear-gradient(135deg, rgba(2, 6, 23, 0.85), rgba(15, 23, 42, 0.75)),
        url('/repair-pic.webp');
      background-size: cover;
      background-position: center;
      background-attachment: fixed;
      position: relative;
    }
    
    .repair-section-bg {
      background: 
        linear-gradient(135deg, rgba(2, 6, 23, 0.9), rgba(15, 23, 42, 0.8)),
        url('/repair-pic.webp');
      background-size: cover;
      background-position: center;
      background-attachment: fixed;
      position: relative;
    }
    
    /* CARD STYLES */
    .cosmic-card {
      background: linear-gradient(145deg, rgba(15, 23, 42, 0.9), rgba(30, 58, 138, 0.1));
      border: 1px solid var(--plasma-cyan);
      border-radius: 20px;
      backdrop-filter: blur(15px);
      box-shadow: 0 8px 32px rgba(6, 182, 212, 0.2);
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
    }
    
    .cosmic-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 1px;
      background: linear-gradient(90deg, transparent, var(--aurora-green), transparent);
      opacity: 0;
      transition: opacity 0.3s ease;
    }
    
    .cosmic-card:hover {
      transform: translateY(-8px);
      border-color: var(--aurora-green);
      box-shadow: 0 16px 40px rgba(16, 185, 129, 0.3);
    }
    
    .cosmic-card:hover::before {
      opacity: 1;
    }
    
    /* BUTTON STYLES */
    .space-button {
      background: linear-gradient(135deg, var(--cosmic-blue), var(--nebula-purple));
      border: 1px solid var(--aurora-green);
      color: var(--starlight-white);
      padding: 14px 28px;
      border-radius: 25px;
      font-weight: 600;
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      gap: 10px;
      transition: all 0.3s ease;
      font-size: 14px;
      position: relative;
      overflow: hidden;
    }
    
    .space-button::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
      transition: left 0.5s ease;
    }
    
    .space-button:hover::before {
      left: 100%;
    }
    
    .space-button:hover {
      transform: translateY(-3px);
      box-shadow: 0 8px 25px rgba(30, 58, 138, 0.4);
    }
    
    /* PLANET ICONS */
    .planet-icon {
      width: 80px;
      height: 80px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 32px;
      margin: 0 auto 20px;
      border: 2px solid var(--aurora-green);
      transition: all 0.3s ease;
      animation: orbit 20s linear infinite;
      position: relative;
    }
    
    .planet-icon::after {
      content: '';
      position: absolute;
      top: -2px;
      left: -2px;
      right: -2px;
      bottom: -2px;
      border-radius: 50%;
      background: linear-gradient(45deg, var(--plasma-cyan), var(--aurora-green));
      z-index: -1;
      opacity: 0;
      transition: opacity 0.3s ease;
    }
    
    .planet-icon:hover {
      transform: scale(1.1);
      animation-play-state: paused;
    }
    
    .planet-icon:hover::after {
      opacity: 1;
    }
    
    /* GRIDS */
    .services-grid { 
      display: grid; 
      grid-template-columns: repeat(auto-fit, minmax(350px, 1fr)); 
      gap: 30px; 
    }
    .process-grid { 
      display: grid; 
      grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); 
      gap: 24px; 
    }
    .testimonials-grid { 
      display: grid; 
      grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); 
      gap: 24px; 
    }
    
    /* CONTAINER */
    .container {
      width: 100%;
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 20px;
      box-sizing: border-box;
    }
    
    /* MOBILE OPTIMIZATIONS */
    @media (max-width: 768px) {
      .repair-hero-bg,
      .repair-section-bg {
        background-attachment: scroll;
      }
      
      .container {
        padding: 0 16px;
      }
      
      .services-grid { 
        grid-template-columns: 1fr; 
        gap: 20px; 
      }
      .process-grid { 
        grid-template-columns: repeat(2, 1fr); 
        gap: 16px; 
      }
      .testimonials-grid { 
        grid-template-columns: 1fr; 
        gap: 20px; 
      }
      .space-button { 
        padding: 12px 24px; 
        font-size: 13px; 
      }
      .planet-icon { 
        width: 60px; 
        height: 60px; 
        font-size: 24px; 
      }
    }
    
    @media (max-width: 480px) {
      .container {
        padding: 0 12px;
      }
      
      .process-grid {
        grid-template-columns: 1fr;
        gap: 12px;
      }
      
      .space-button {
        padding: 10px 20px;
        font-size: 12px;
      }
    }
  </style>

