---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/Hero.astro';
---

<Layout>
  <Hero />
  
  <style>
    /* Custom animations and effects */
    @keyframes float {
        0%, 100% { transform: translateY(0px); }
        50% { transform: translateY(-10px); }
    }
    
    @keyframes fade-in-up {
        0% {
            opacity: 0;
            transform: translateY(1.5rem);
        }
        100% {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    .float-animation { animation: float 5s ease-in-out infinite; }
    .animate-fade-in-up {
        animation: fade-in-up 0.6s ease forwards;
    }
  </style>

  <!-- Services -->
  <section class="py-24 bg-gray-50">
    <div class="text-center mb-20">
      <h2 class="text-4xl md:text-3xl font-extrabold text-gray-800 animate-slide-up">Computer Repair Services in Harold Hill & Romford</h2>
      <div class="w-24 h-1 bg-blue-600 mx-auto mt-4 mb-8 rounded animate-slide-up" style="animation-delay: 0.1s;"></div>
      <p class="text-gray-600 max-w-3xl mx-auto animate-slide-up" style="animation-delay: 0.2s;">
        From laptop repairs to custom gaming PC builds, we offer comprehensive IT support services across Havering. All work comes with our satisfaction guarantee.
      </p>
    </div>

    <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3 px-6 max-w-7xl mx-auto">
      {[
        {
          icon: "üíª",
          title: "Laptop & Desktop Repairs",
          desc: "Professional repair services for all makes and models. Same-day repairs available for most issues.",
        },
        {
          icon: "üõí",
          title: "New & Refurbished Windows 11 PCs",
          desc: "Quality pre-owned and new computers with Windows 11, perfect for home and business use.",
        },
        {
          icon: "üïπÔ∏è",
          title: "Custom Built Gaming PCs",
          desc: "Bespoke gaming rigs built to your specifications and budget. Latest graphics cards and processors.",
        },
        {
          icon: "‚ö°",
          title: "Fast SSD & RAM Upgrades",
          desc: "Speed up your computer with SSD installations and memory upgrades. Instant performance boost.",
        },
        {
          icon: "üíæ",
          title: "Data Recovery Services",
          desc: "Recover lost files from crashed hard drives, corrupted USB drives, and damaged storage devices.",
        },
        {
          icon: "ü¶†",
          title: "Virus & Malware Removal",
          desc: "Complete system cleanup and protection setup. Remove stubborn viruses and prevent future infections.",
        },
        {
          icon: "üñ®Ô∏è",
          title: "Printer Setup & Support",
          desc: "Printer installation, troubleshooting, and network setup. All major brands supported.",
        },
        {
          icon: "üßπ",
          title: "System Cleanup & Optimization",
          desc: "Remove junk files, optimize startup programs, and tune your system for peak performance.",
        },
        {
          icon: "üîå",
          title: "Home Network Setup",
          desc: "Wi-Fi setup, router configuration, and network troubleshooting for reliable internet access.",
        }
      ].map((service, index) => (
        <article
          key={index}
          class="glass-effect p-6 rounded-xl shadow-md enhanced-hover animate-slide-rotate-up"
          style={`animation-delay: ${0.3 + index * 0.07}s;`}
        >
          <div class="flex items-start gap-4">
            <span class="text-3xl">{service.icon}</span>
            <div>
              <h3 class="font-semibold text-lg text-gray-800 mb-2">{service.title}</h3>
              <p class="text-gray-600 text-sm">{service.desc}</p>
            </div>
          </div>
        </article>
      ))}
    </div>
  </section>

  <!-- Why Choose Us -->
  <section class="py-24 bg-gradient-to-br from-white via-sky-50 to-blue-100">
    <div class="text-center mb-16">
      <h2 class="text-3xl font-extrabold gradient-text animate-slide-up">Why Choose Chiltern Computers?</h2>
      <div class="w-24 h-1 bg-blue-600 mx-auto mt-4 mb-6 rounded animate-slide-up" style="animation-delay: 0.1s;"></div>
      <p class="text-gray-600 text-base animate-slide-up" style="animation-delay: 0.2s;">
        Fast, honest, and experienced local computer repair & support.
      </p>
    </div>

    <div class="grid gap-10 md:grid-cols-3 px-6 max-w-6xl mx-auto">
      <!-- Card 1 -->
      <div class="glass-effect p-8 rounded-2xl text-center shadow-xl hover:shadow-2xl hover-scale hover-glow animate-slide-up" style="animation-delay: 0.3s;">
        <div class="text-6xl mb-4">üèÜ</div>
        <h3 class="text-2xl font-semibold text-gray-800 mb-2 animate-pulse-glow">20+ Years Experience</h3>
        <p class="text-gray-600">Decades of trusted computer repair and IT support across Essex.</p>
      </div>

      <!-- Card 2 -->
      <div class="glass-effect p-8 rounded-2xl text-center shadow-xl hover:shadow-2xl hover-scale hover-glow animate-slide-up" style="animation-delay: 0.4s;">
        <div class="text-6xl mb-4">‚ö°</div>
        <h3 class="text-2xl font-semibold text-gray-800 mb-2 animate-pulse-glow">Fast Turnaround</h3>
        <p class="text-gray-600">Same-day or 24-hour service on most repairs‚Äîlightning quick support.</p>
      </div>

      <!-- Card 3 -->
      <div class="glass-effect p-8 rounded-2xl text-center shadow-xl hover:shadow-2xl hover-scale hover-glow animate-slide-up" style="animation-delay: 0.5s;">
        <div class="text-6xl mb-4">üí∑</div>
        <h3 class="text-2xl font-semibold text-gray-800 mb-2 animate-pulse-glow">Fair Pricing</h3>
        <p class="text-gray-600">Straightforward pricing with no hidden surprises. You only pay what's fair.</p>
      </div>
    </div>
  </section>

  <!-- Reviews -->
  <section class="bg-gray-50 py-24">
    <div class="text-center mb-16">
      <h2 class="text-4xl md:text-3xl font-extrabold text-gray-800 animate-slide-up">Customer Reviews - Harold Hill IT Support</h2>
      <div class="w-24 h-1 bg-blue-600 mx-auto mt-4 mb-6 rounded animate-slide-up" style="animation-delay: 0.1s;"></div>
      <p class="text-gray-600 max-w-2xl mx-auto animate-slide-up" style="animation-delay: 0.2s;">
        See what our satisfied customers in Romford and Essex say about our service.
      </p>
    </div>

    <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-4 px-6 max-w-7xl mx-auto">
      {[
        {
          quote: "Fast, friendly and reliable service. Fixed my laptop screen in Harold Hill same day. Highly recommend!",
          name: "Sarah J., Romford",
        },
        {
          quote: "Solved my laptop virus issues in no time. Great value for money and excellent customer service!",
          name: "Tom H., Harold Wood",
        },
        {
          quote: "Professional and very helpful. Built me an amazing gaming PC within budget. Thank you!",
          name: "Rachel A., Hornchurch",
        },
        {
          quote: "Wouldn't go anywhere else for IT support. Always helpful and reasonably priced.",
          name: "Mike D., Dagenham",
        }
      ].map((review, index) => (
        <article 
          class="glass-effect p-6 rounded-xl shadow-md hover-lift animate-slide-up transition-all duration-300"
          style={`animation-delay: ${0.3 + index * 0.1}s;`}
        >
          <div class="text-yellow-400 mb-3 text-lg">‚≠ê‚≠ê‚≠ê‚≠ê‚≠ê</div>
          <p class="italic text-gray-700 mb-3">"{review.quote}"</p>
          <p class="mt-2 font-semibold text-sm text-gray-900">{review.name}</p>
        </article>
      ))}
    </div>
  </section>

  <!-- Areas Covered -->
  <section class="bg-gradient-to-br from-white via-gray-50 to-white pt-24 pb-16">
    <div class="container mx-auto px-4">
      <!-- Header -->
      <div class="text-center mb-16">
        <h2 class="text-3xl font-extrabold gradient-text animate-slide-up">Computer Repair Coverage Areas</h2>
        <div class="w-24 h-1 bg-blue-600 mx-auto mt-4 mb-4 rounded animate-slide-up" style="animation-delay: 0.1s;"></div>
        <p class="text-lg text-gray-700 max-w-3xl mx-auto leading-relaxed animate-slide-up" style="animation-delay: 0.2s;">
          Based in Harold Hill, Chiltern Computers proudly provides computer repair and IT support services throughout Romford and surrounding areas.
        </p>
      </div>

      <!-- Areas Grid -->
      <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-5 max-w-7xl mx-auto">
        {[
          { name: "Harold Hill", desc: "Main Service Area", map: "https://maps.google.com/?q=Harold+Hill+Romford", featured: true },
          { name: "Romford", desc: "RM1, RM2, RM3", map: "https://maps.google.com/?q=Romford" },
          { name: "Harold Wood", desc: "RM3", map: "https://maps.google.com/?q=Harold+Wood" },
          { name: "Hornchurch", desc: "RM11, RM12", map: "https://maps.google.com/?q=Hornchurch" },
          { name: "Collier Row", desc: "RM5", map: "https://maps.google.com/?q=Collier+Row" },
          { name: "Dagenham", desc: "RM8, RM9, RM10", map: "https://maps.google.com/?q=Dagenham" },
          { name: "Rainham", desc: "RM13", map: "https://maps.google.com/?q=Rainham+Essex" },
          { name: "Brentwood", desc: "CM13, CM14, CM15", map: "https://maps.google.com/?q=Brentwood+Essex" },
          { name: "Chadwell Heath", desc: "RM6", map: "https://maps.google.com/?q=Chadwell+Heath" },
          { name: "Hainault & Gidea Park", desc: "IG6, IG7, RM2", map: "https://maps.google.com/?q=Gidea+Park" }
        ].map((area, index) => (
          <a 
            href={area.map}
            target="_blank"
            rel="noopener noreferrer"
            class={`group relative p-6 rounded-2xl glass-effect shadow-md hover-lift hover-glow animate-slide-up transition duration-300 ease-in-out`}
            style={`animation-delay: ${0.3 + index * 0.05}s; ${area.featured ? 'box-shadow: 0 0 0 2px #3B82F6;' : ''}`}
          >
            {area.featured && (
              <div class="absolute -top-2 -right-2 bg-blue-600 text-white text-xs px-2 py-1 rounded-full font-semibold shadow-md animate-pulse-glow">
                Main Area
              </div>
            )}

            <div class="text-center">
              <div class="mb-3">
                <svg class="w-8 h-8 mx-auto text-blue-600 group-hover:text-blue-700 transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>

              <h3 class="font-bold text-gray-800 group-hover:text-blue-700 transition-colors mb-1 text-sm leading-tight">
                {area.name}
              </h3>

              <p class="text-gray-600 text-xs font-medium">
                {area.desc}
              </p>
            </div>
          </a>
        ))}
      </div>

      <!-- Call to Action -->
      <div class="text-center mt-16 animate-slide-up" style="animation-delay: 0.8s;">
        <p class="text-gray-600 mb-5">
          Don't see your area listed? We may still be able to help.
        </p>
        <a href="tel:07971331814" class="inline-flex items-center px-6 py-3 bg-blue-600 text-white font-semibold rounded-xl hover:bg-blue-700 transition-all shadow-md hover:shadow-lg">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h6m-2 8a9 9 0 100-18 9 9 0 000 18z" />
          </svg>
          Contact Us Today
        </a>
      </div>
    </div>
  </section>
</Layout>