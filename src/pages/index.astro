  <style>
    @import url('https://fonts.googleapis.com/css2?family=Orbitron:wght@300;400;500;600;700;800;900&family=Exo+2:wght@200;300;400;500;600;700&family=Space+Mono:wght@400;700&display=swap');
    
    :root {
      --cosmic-blue: #1e3a8a;
      --nebula-purple: #7c3aed;
      --starlight-white: #f8fafc;
      --plasma-cyan: #06b6d4;
      --aurora-green: #10b981;
      --solar-orange: #f59e0b;
      --mars-red: #dc2626;
      --deep-space: #0f172a;
      --asteroid-gray: #374151;
      --comet-silver: #e5e7eb;
    }
    
    /* FONTS */
    .space-font { font-family: 'Orbitron', sans-serif; font-weight: 700; }
    .alien-font { font-family: 'Exo 2', sans-serif; }
    .tech-font { font-family: 'Space Mono', monospace; }
    
    /* ANIMATIONS */
    @keyframes orbit {
      0% { transform: translateX(0) rotate(0deg); }
      100% { transform: translateX(0) rotate(360deg); }
    }
    
    @keyframes float-cosmic {
      0%, 100% { transform: translateY(0px) scale(1); }
      50% { transform: translateY(-15px) scale(1.05); }
    }
    
    @keyframes starfield-twinkle {
      0%, 100% { opacity: 0.3; transform: scale(1); }
      50% { opacity: 1; transform: scale(1.2); }
    }
    
    @keyframes ufo-hover {
      0%, 100% { transform: translateY(0px) rotate(-2deg); }
      25% { transform: translateY(-8px) rotate(1deg); }
      50% { transform: translateY(-12px) rotate(2deg); }
      75% { transform: translateY(-6px) rotate(-1deg); }
    }
    
    @keyframes plasma-flow {
      0% { background-position: 0% 50%; }
      50% { background-position: 100% 50%; }
      100% { background-position: 0% 50%; }
    }
    
    @keyframes cosmic-pulse {
      0%, 100% { 
        text-shadow: 0 0 10px currentColor, 0 0 20px currentColor, 0 0 30px currentColor;
        filter: brightness(1);
      }
      50% { 
        text-shadow: 0 0 20px currentColor, 0 0 30px currentColor, 0 0 40px currentColor;
        filter: brightness(1.3);
      }
    }
    
    @keyframes auto-scroll {
      0% { transform: translateX(0); }
      100% { transform: translateX(-50%); }
    }
    
    @keyframes meteor-streak {
      0% { transform: translateX(-100px) translateY(100px) rotate(45deg); opacity: 0; }
      10% { opacity: 1; }
      90% { opacity: 1; }
      100% { transform: translateX(calc(100vw + 100px)) translateY(-100px) rotate(45deg); opacity: 0; }
    }
    
    /* SHARED STYLES */
    .cosmic-glow { animation: cosmic-pulse 3s ease-in-out infinite alternate; }
    .starfield-blink { animation: starfield-twinkle 2s ease-in-out infinite; }
    .galaxy-text {
      background: linear-gradient(135deg, var(--plasma-cyan), var(--aurora-green), var(--nebula-purple));
      background-size: 200% 200%;
      animation: plasma-flow 4s ease-in-out infinite;
      -webkit-background-clip: text;
      background-clip: text;
      -webkit-text-fill-color: transparent;
    }
    
    /* CARD STYLES */
    .cosmic-card {
      background: linear-gradient(145deg, rgba(15, 23, 42, 0.95), rgba(30, 58, 138, 0.1));
      border: 2px solid var(--plasma-cyan);
      border-radius: 20px;
      backdrop-filter: blur(20px);
      box-shadow: 
        0 10px 30px rgba(6, 182, 212, 0.3),
        inset 0 1px 0 rgba(248, 250, 252, 0.1);
      transition: all 0.5s cubic-bezier(0.4, 0, 0.2, 1);
      position: relative;
      overflow: hidden;
    }
    
    .cosmic-card::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      height: 2px;
      background: linear-gradient(90deg, var(--aurora-green), var(--plasma-cyan), var(--nebula-purple));
      opacity: 0;
      transition: opacity 0.3s ease;
    }
    
    .cosmic-card::after {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(6, 182, 212, 0.1), transparent);
      transition: left 0.8s ease;
    }
    
    .cosmic-card:hover {
      transform: translateY(-10px) scale(1.03);
      border-color: var(--aurora-green);
      box-shadow: 
        0 25px 50px rgba(16, 185, 129, 0.4),
        0 0 40px rgba(6, 182, 212, 0.3),
        inset 0 1px 0 rgba(248, 250, 252, 0.2);
    }
    
    .cosmic-card:hover::before { opacity: 1; }
    .cosmic-card:hover::after { left: 100%; }
    
    /* BUTTON STYLES */
    .space-button {
      background: linear-gradient(135deg, var(--cosmic-blue), var(--nebula-purple));
      border: 2px solid var(--aurora-green);
      color: var(--starlight-white);
      padding: 16px 32px;
      border-radius: 50px;
      font-weight: 700;
      text-decoration: none;
      display: inline-flex;
      align-items: center;
      gap: 12px;
      transition: all 0.5s ease;
      font-size: 16px;
      position: relative;
      overflow: hidden;
      text-shadow: 0 0 10px var(--starlight-white);
      box-shadow: 0 0 20px var(--cosmic-blue);
    }
    
    .space-button::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, rgba(248, 250, 252, 0.3), transparent);
      transition: left 0.8s ease;
    }
    
    .space-button:hover {
      transform: translateY(-4px) scale(1.05);
      border-color: var(--plasma-cyan);
      box-shadow: 
        0 20px 40px rgba(30, 58, 138, 0.5),
        0 0 40px var(--aurora-green);
      animation: ufo-hover 2s ease-in-out infinite;
    }
    
    .space-button:hover::before { left: 100%; }
    
    /* PLANET ICONS */
    .planet-icon {
      width: 100px;
      height: 100px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 40px;
      margin: 0 auto 24px;
      border: 3px solid var(--aurora-green);
      transition: all 0.5s ease;
      animation: orbit 20s linear infinite;
      position: relative;
      overflow: hidden;
    }
    
    .planet-icon::before {
      content: '';
      position: absolute;
      inset: 0;
      border-radius: 50%;
      background: radial-gradient(circle at 30% 30%, rgba(248, 250, 252, 0.3), transparent 50%);
    }
    
    .planet-icon:hover {
      transform: scale(1.2);
      animation-play-state: paused;
      box-shadow: 0 0 30px currentColor;
    }
    
    /* GRIDS */
    .stats-grid { 
      display: grid; 
      grid-template-columns: repeat(auto-fit, minmax(260px, 1fr)); 
      gap: 32px; 
    }
    .services-grid { 
      display: grid; 
      grid-template-columns: repeat(auto-fit, minmax(350px, 1fr)); 
      gap: 32px; 
    }
    .features-grid { 
      display: grid; 
      grid-template-columns: repeat(auto-fit, minmax(320px, 1fr)); 
      gap: 40px; 
    }
    
    /* EFFECTS */
    .meteor {
      position: absolute;
      width: 2px;
      height: 20px;
      background: linear-gradient(0deg, transparent, var(--starlight-white));
      animation: meteor-streak 8s linear infinite;
    }
    
    .starfield {
      position: absolute;
      width: 2px;
      height: 2px;
      background: var(--starlight-white);
      border-radius: 50%;
      animation: starfield-twinkle 3s ease-in-out infinite;
    }
    
    .scroll-container { overflow: hidden; position: relative; }
    .scroll-container:hover .auto-scroll-content { animation-play-state: paused; }
    
    /* SHARED BACKGROUNDS */
    .section-bg-1 {
      background: radial-gradient(circle at 20% 30%, var(--cosmic-blue) 0%, var(--deep-space) 40%), 
                  radial-gradient(circle at 80% 70%, var(--nebula-purple) 0%, var(--deep-space) 40%), 
                  var(--deep-space);
      background-size: 400% 400%;
      animation: plasma-flow 12s ease-in-out infinite;
    }
    .section-bg-2 {
      background: linear-gradient(45deg, var(--deep-space), rgba(30, 58, 138, 0.2), var(--deep-space));
      background-size: 400% 400%;
      animation: plasma-flow 15s ease-in-out infinite;
    }
    .section-bg-3 {
      background: linear-gradient(90deg, var(--deep-space), rgba(124, 58, 237, 0.2), var(--deep-space));
      background-size: 300% 300%;
      animation: plasma-flow 18s ease-in-out infinite;
    }
    .section-bg-4 {
      background: linear-gradient(135deg, var(--deep-space), rgba(6, 182, 212, 0.2), var(--deep-space));
      background-size: 400% 400%;
      animation: plasma-flow 20s ease-in-out infinite;
    }
    .section-bg-5 {
      background: linear-gradient(45deg, var(--deep-space), rgba(16, 185, 129, 0.2), var(--deep-space));
      background-size: 300% 300%;
      animation: plasma-flow 22s ease-in-out infinite;
    }
