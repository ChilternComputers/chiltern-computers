  /* Seamless Ticker Animation Fix */

.scroll-container {
    width: 100%;
    height: 60px;
    overflow: hidden;
    background: linear-gradient(135deg, #1a1a2e, #16213e);
    border: 2px solid #00d4ff;
    border-radius: 12px;
    position: relative;
    contain: layout style paint;
    will-change: transform;
}

.scroll-content {
    display: flex;
    align-items: center;
    height: 100%;
    /* Seamless loop animation - Extended duration to show all content */
    animation: seamlessScroll 20s linear infinite;
    white-space: nowrap;
    gap: 1.5rem;
    /* Performance optimizations */
    transform: translateZ(0);
    backface-visibility: hidden;
    will-change: transform;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
}

/* Key fix: Animation that creates seamless loop */
@keyframes seamlessScroll {
    0% {
        transform: translate3d(0%, 0, 0);
    }
    100% {
        transform: translate3d(-100%, 0, 0);
    }
}

/* Create proper spacing for seamless loop */
.scroll-content::after {
    content: "";
    width: 100vw; /* Larger gap to ensure full content displays */
    flex-shrink: 0;
}

