---
// src/pages/thank-you.astro
import Layout from '../layouts/Layout.astro';
---

<Layout title="Thank You - Message Sent Successfully">
  <section class="section-bg-5" style="min-height: 100vh; padding: 120px 20px 40px; position: relative; margin: 0; display: flex; align-items: center; justify-content: center;" role="main">
    
    <div style="max-width: 800px; text-align: center;">
      
      <!-- Success Icon -->
      <div style="margin-bottom: 40px;">
        <div style="width: 120px; height: 120px; background: linear-gradient(135deg, #22c55e, #16a34a); border-radius: 50%; display: flex; align-items: center; justify-content: center; margin: 0 auto; box-shadow: 0 20px 40px rgba(34, 197, 94, 0.3);">
          <span style="font-size: 60px;">✅</span>
        </div>
      </div>

      <!-- Main Heading -->
      <h1 class="space-font cosmic-glow" style="color: #22c55e; font-size: 48px; font-weight: 700; margin-bottom: 24px; letter-spacing: 2px;">
        Message Sent Successfully!
      </h1>
      
      <!-- Divider -->
      <div style="height: 3px; width: 120px; background: #22c55e; margin: 0 auto 32px;"></div>
      
      <!-- Thank You Message -->
      <div style="background: rgba(26, 31, 46, 0.8); border: 1px solid #22c55e; border-radius: 16px; padding: 40px; margin-bottom: 40px;">
        <h2 class="space-font" style="color: #e2e8f0; font-size: 24px; font-weight: 600; margin-bottom: 24px;">
          Thank you for contacting Chiltern Computers!
        </h2>
        
        <p class="alien-font" style="color: #b0c4de; font-size: 18px; line-height: 1.6; margin-bottom: 20px;">
          We've received your message and will get back to you as soon as possible. Our typical response time is within 2-4 hours during business hours.
        </p>
        
        <p class="alien-font" style="color: #b0c4de; font-size: 16px; line-height: 1.6;">
          For urgent computer repair needs, please call us directly at <strong style="color: #22c55e;">07971 331814</strong>
        </p>
      </div>

      <!-- What Happens Next -->
      <div style="background: rgba(26, 31, 46, 0.8); border: 1px solid #3b82f6; border-radius: 16px; padding: 32px; margin-bottom: 40px;">
        <h3 class="space-font" style="color: #3b82f6; font-size: 20px; font-weight: 600; margin-bottom: 20px;">
          What happens next?
        </h3>
        
        <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(200px, 1fr)); gap: 20px;">
          <div style="text-align: center;">
            <div style="font-size: 40px; margin-bottom: 10px;">📧</div>
            <p class="alien-font" style="color: #b0c4de; font-size: 14px;">We'll review your message</p>
          </div>
          <div style="text-align: center;">
            <div style="font-size: 40px; margin-bottom: 10px;">📞</div>
            <p class="alien-font" style="color: #b0c4de; font-size: 14px;">Contact you with next steps</p>
          </div>
          <div style="text-align: center;">
            <div style="font-size: 40px; margin-bottom: 10px;">🔧</div>
            <p class="alien-font" style="color: #b0c4de; font-size: 14px;">Schedule your repair</p>
          </div>
        </div>
      </div>

      <!-- Action Buttons -->
      <div style="display: flex; flex-wrap: wrap; gap: 16px; justify-content: center;">
        <a href="/" style="text-decoration: none;">
          <button style="background: linear-gradient(135deg, #3b82f6, #2563eb); border: none; color: white; padding: 16px 32px; border-radius: 8px; font-size: 16px; font-weight: 600; cursor: pointer; display: flex; align-items: center; gap: 8px;">
            🏠 Back to Home
          </button>
        </a>
        
        <a href="/services" style="text-decoration: none;">
          <button style="background: rgba(26, 31, 46, 0.8); border: 1px solid #3b82f6; color: #3b82f6; padding: 16px 32px; border-radius: 8px; font-size: 16px; font-weight: 600; cursor: pointer; display: flex; align-items: center; gap: 8px;">
            🔧 Our Services
          </button>
        </a>
      </div>

      <!-- Emergency Contact -->
      <div style="margin-top: 40px; padding: 20px; background: rgba(239, 68, 68, 0.1); border: 1px solid #ef4444; border-radius: 12px;">
        <p class="alien-font" style="color: #ef4444; font-size: 16px; font-weight: 600; margin-bottom: 8px;">
          🚨 Computer Emergency?
        </p>
        <p class="alien-font" style="color: #b0c4de; font-size: 14px;">
          If your computer issue is urgent and affecting your work, call us immediately at <strong>07971 331814</strong> for same-day service.
        </p>
      </div>
    </div>
  </section>

  <!-- Mobile Responsive Styles -->
  <style>
    @media (max-width: 768px) {
      section {
        padding: 100px 16px 32px !important;
      }
      
      h1 {
        font-size: 32px !important;
      }
      
      section > div {
        max-width: 100% !important;
      }
      
      section > div > div {
        padding: 24px !important;
        margin-bottom: 24px !important;
      }
      
      section > div > div:last-child {
        margin-top: 24px !important;
      }
    }
    
    @media (max-width: 480px) {
      h1 {
        font-size: 28px !important;
      }
      
      section > div > div {
        padding: 20px !important;
      }
      
      section > div > div:last-child button {
        padding: 12px 24px !important;
        font-size: 14px !important;
      }
    }
  </style>
</Layout>