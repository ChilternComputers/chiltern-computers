---
import Layout from '../../layouts/Layout.astro';

// Define categories for topic clusters
const categories = [
  { id: "all", name: "All Posts", color: "var(--plasma-cyan)" },
  { id: "repairs", name: "Repairs & Troubleshooting", color: "var(--aurora-green)" },
  { id: "guides", name: "Buying Guides", color: "var(--solar-orange)" },
  { id: "gaming", name: "Gaming PCs", color: "var(--nebula-purple)" },
  { id: "business", name: "Business IT", color: "var(--plasma-cyan)" },
