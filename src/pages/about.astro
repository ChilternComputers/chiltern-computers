  <!-- REMOVED DUPLICATE SEO COMPONENT - Layout handles SEO automatically -->
  
  <style>
    /* REMOVED DUPLICATE FONT IMPORT - Now using fonts from Layout.astro */
    
    /* MOBILE OVERFLOW FIXES */
    * {
      box-sizing: border-box;
    }
    
    html, body {
      overflow-x: hidden;
      width: 100%;
    }
    
    :root {
      --cosmic-blue: #1e3a8a;
      --nebula-purple: #7c3aed;
      --dark-purple: #4c1d95;
      --deep-purple: #312e81;
      --starlight-white: #f8fafc;
      --plasma-cyan: #06b6d4;
      --aurora-green: #10b981;
      --solar-orange: #f59e0b;
      --mars-red: #dc2626;
      --deep-space: #0f172a;
      --darker-space: #0c0f1a;
      --void-black: #020617;
      --asteroid-gray: #374151;
      --comet-silver: #e5e7eb;
    }
    
    /* FONTS */
    .space-font { font-family: 'Orbitron', sans-serif; font-weight: 600; }
    .alien-font { font-family: 'Exo 2', sans-serif; }
    .tech-font { font-family: 'Space Mono', monospace; }
    
    /* ANIMATIONS */
    @keyframes orbit {
      0% { transform: rotate(0deg); }
      100% { transform: rotate(360deg); }
    }
    
    @keyframes float-cosmic {
      0%, 100% { transform: translateY(0px); }
      50% { transform: translateY(-8px); }
    }
    
    @keyframes plasma-flow {
      0% { background-position: 0% 0%; }
      50% { background-position: 100% 100%; }
      100% { background-position: 0% 0%; }
    }
    
    @keyframes cosmic-pulse {
      0%, 100% { text-shadow: 0 0 5px currentColor; }
      50% { text-shadow: 0 0 15px currentColor; }
    }
    
    @keyframes stellar-blink {
      0%, 100% { opacity: 1; }
      50% { opacity: 0.3; }
    }
    
    /* SHARED STYLES */
    .cosmic-glow { animation: cosmic-pulse 3s ease-in-out infinite alternate; }
    .galaxy-text {
      background: linear-gradient(135deg, var(--plasma-cyan), var(--aurora-green), var(--nebula-purple));
      background-size: 200% 200%;
      animation: plasma-flow 4s ease-in-out infinite;
      -webkit-background-clip: text;
      background-clip: text;
      -webkit-text-fill-color: transparent;
    }
    
    /* CARD STYLES */
    .cosmic-card {
      background: linear-gradient(145deg, rgba(15, 23, 42, 0.9), rgba(30, 58, 138, 0.1));
      border: 1px solid var(--plasma-cyan);
      border-radius: 12px;
      backdrop-filter: blur(10px);
      box-shadow: 0 4px 12px rgba(6, 182, 212, 0.2);
      transition: all 0.3s ease;
      position: relative;
    }
    
    .cosmic-card:hover {
      transform: translateY(-4px);
      border-color: var(--aurora-green);
      box-shadow: 0 8px 25px rgba(16, 185, 129, 0.3);
    }
    
    /* PLANET ICONS */
    .planet-icon {
      width: 80px;
      height: 80px;
      border-radius: 50%;
      display: flex;
      align-items: center;
      justify-content: center;
      font-size: 32px;
      margin: 0 auto 20px;
      border: 2px solid var(--aurora-green);
      transition: all 0.3s ease;
      animation: orbit 20s linear infinite;
    }
    
    .planet-icon:hover {
      transform: scale(1.1);
      animation-play-state: paused;
    }
    
    .small-planet-icon {
      width: 50px;
      height: 50px;
      font-size: 20px;
      margin: 0 auto 12px;
      animation: orbit 15s linear infinite;
    }
    
    /* BACKGROUND */
    .section-bg {
      background: 
        radial-gradient(ellipse at 20% 80%, rgba(124, 58, 237, 0.15) 0%, transparent 50%),
        radial-gradient(ellipse at 80% 20%, rgba(30, 58, 138, 0.12) 0%, transparent 50%),
        var(--void-black);
      background-size: 800px 600px, 900px 700px;
      animation: plasma-flow 30s ease-in-out infinite;
      min-height: 100vh;
      width: 100%;
      overflow-x: hidden;
    }
    
    /* CONTAINER */
    .container {
      width: 100%;
      max-width: 1200px;
      margin: 0 auto;
      padding: 0 20px;
      box-sizing: border-box;
    }
    
    /* CONTENT STYLES */
    .content-text {
      color: var(--comet-silver);
      font-size: 16px;
      line-height: 1.7;
      margin-bottom: 24px;
    }
    
    .contact-info {
      list-style: none;
      padding: 0;
      margin: 0;
    }
    
    .contact-info li {
      color: var(--starlight-white);
      font-size: 16px;
      margin-bottom: 12px;
      display: flex;
      align-items: center;
      gap: 12px;
    }
    
    .contact-info a {
      color: var(--plasma-cyan);
      text-decoration: none;
      transition: color 0.3s ease;
    }
    
    .contact-info a:hover {
      color: var(--aurora-green);
    }
    
    /* TESTIMONIALS */
    .testimonial-grid {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 24px;
      margin-top: 40px;
    }
    
    .testimonial-card {
      background: linear-gradient(145deg, rgba(15, 23, 42, 0.9), rgba(30, 58, 138, 0.1));
      border: 1px solid var(--solar-orange);
      border-radius: 12px;
      backdrop-filter: blur(10px);
      box-shadow: 0 4px 12px rgba(245, 158, 11, 0.2);
      padding: 24px;
      transition: all 0.3s ease;
      position: relative;
    }
    
    .testimonial-card:hover {
      transform: translateY(-4px);
      border-color: var(--aurora-green);
      box-shadow: 0 8px 25px rgba(16, 185, 129, 0.3);
    }
    
    .stars {
      color: var(--solar-orange);
      font-size: 20px;
      margin-bottom: 16px;
      animation: stellar-blink 3s ease-in-out infinite;
    }
    
    .testimonial-text {
      color: var(--starlight-white);
      font-style: italic;
      margin-bottom: 16px;
      line-height: 1.6;
    }
    
    .testimonial-author {
      color: var(--plasma-cyan);
      font-size: 14px;
      font-weight: 600;
    }
    
    /* MOBILE OPTIMIZATIONS */
    @media (max-width: 768px) {
      .section-bg {
        background-size: 400px 300px, 450px 350px;
      }
      
      .container {
        padding: 0 16px;
      }
      
      .planet-icon {
        width: 60px;
        height: 60px;
        font-size: 24px;
      }
      
      .small-planet-icon {
        width: 40px;
        height: 40px;
        font-size: 16px;
      }
      
      .testimonial-grid {
        grid-template-columns: 1fr;
      }
    }
    
    @media (max-width: 480px) {
      .container {
        padding: 0 12px;
      }
      
      .content-text {
        font-size: 14px;
      }
      
      .contact-info li {
        font-size: 14px;
      }
    }
  </style>

